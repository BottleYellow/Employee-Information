{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=MILIND;Initial Catalog=EmployeeMaster;Integrated Security=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": "Error",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=MILIND;Initial Catalog=EmployeeMaster;Integrated Security=True",
          "tableName": "Logs",
          "autoCreateSqlTable": true
        }
      }
    ]
  },

  "appSettings": {
    "ToEmail": "enter mail id",
    "UserID": "enter mail id",
    "Password": "password",
    "SMTPPort": "587",
    "Host": "smtp.gmail.com"
  },

  "AllowedHosts": "*"
} 
