<!-- Include moment-->
<script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script src="~/plugins/fullCalendar/modernizr-2.6.2.js"></script>
<script src="~/plugins/fullCalendar/respond.js"></script>
<!-- qTip -->
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/qtip2/3.0.3/jquery.qtip.min.js"></script>
<script>
    $(document).ready(function () {
        $('#calendar').fullCalendar({
            header:
            {
                left: 'prev,next today',
                center: 'title',
                right: 'month,agendaWeek,agendaDay'
            },
            buttonText: {
                today: 'today',
                month: 'month',
                week: 'week',
                day: 'day'
            },

            events: function (start, end, timezone, callback) {
                $.ajax({
                    url: '/Dashboard/GetFullCalander',
                    type: "POST",
                    dataType: "JSON",

                    success: function (result) {
                        var events = [];

                        $.each(result, function (i, data) {
                            events.push(
                                {
                                    title: data.Vacation,
                                    description: data.Vacation,
                                    start: moment(data.Date).format('YYYY-MM-DD'),
                                    end: moment(data.Date).format('YYYY-MM-DD'),
                                    backgroundColor: "#9501fc",
                                    borderColor: "#fc0101"
                                });
                        });

                        callback(events);
                    }
                });
            },

            eventRender: function (event, element) {
                element.qtip(
                    {
                        content: event.description
                    });
            },

            editable: false
        });
    });
</script>
