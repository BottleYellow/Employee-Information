@model IEnumerable<EIS.Entities.Hoildays.Holiday>
@using EIS.WebApp.Services

<head>
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />
    <style>
        li:hover {
            cursor: pointer;
        }
        table.dataTable td {
            padding: 3px 10px;
            width: 1px;
            white-space: nowrap;
        }
    </style>
</head>

@{
    string rootPath = MyHttpContext.AppBaseUrl;
    string APIURL = MyHttpContext.APIBaseURL;
}


<title>Holidays</title>

<div class="container-fluid">
    <div class="block-header">
        <HeaderWithButton header-name="Holidays"></HeaderWithButton>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <div class="table-responsive">
                        <table id="example" class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Day
                                    </th>
                                    <th>
                                        Holiday
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Date.ToString("dd MMM yyyy")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date.DayOfWeek)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vacation)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
        //{
        //    //"aoColumns": [
        //    //    { "sType": "date" },
        //    //    null
        //    //],
        //});
    });
</script>
<script src="~/plugins/jquery-datatable/jquery.dataTables.js"></script>
<script src="~/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
<script src="~/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>

<script src="~/Ems/js/dataTables.responsive.min.js"></script>

