@model IEnumerable<EIS.Entities.Leave.LeaveCredit>
<html>
<head>
    <title>Leave Credits</title>
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />

    <style>
        li:hover {
            cursor: pointer;
        }

        .dataTables_wrapper .myexport .dt-buttons {
            float: right;
        }

        .ajax-loader {
            visibility: hidden;
            position: absolute;
            z-index: +100 !important;
            width: 80%;
            height: 80%;
        }

            .ajax-loader img {
                position: relative;
                top: 45%;
                left: 45%;
            }
    </style>
</head>
<body>
    <div class="ajax-loader">
        <img src="~/gif/Spinner.gif" />
    </div>
    <div id="modal-placeholder" class="modal fade" role="dialog" data-url="@Url.Action("AddCredit")"></div>
    <div id="modal-placeholder-editcredit" class="modal fade" role="dialog" data-url="@Url.Action("EditCredit")"></div>
    @*BootStrap Model*@
    <div class="container-fluid">
        <div class="block-header">
            <HeaderWithButton btn-id="btnModal" header-name="Leave Credits" btn-text="Add Credit" icon-name="add"></HeaderWithButton>
        </div>
        <div class="row clearfix">
            <div class="row">
                <div class="col-md-9" style="height:50px">
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <select id="locations" asp-items="@(new SelectList(@ViewBag.Locations,"Id","LocationName"))" class="form-control show-tick">
                            <option value="0">All</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <table id="example" class="table table-bordered table-striped table-hover dt-responsive js-basic-example dataTable" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Location</th>
                                    <th>Employee Name</th>
                                    <th>Leave Type</th>
                                    <th>Valid From</th>
                                    <th>Valid To</th>
                                    <th>Days</th>
                                    <th>Available</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<script src="~/lib/bootstrap/dist/js/bootbox.js"></script>
<script>
    $('#locations').on('change', function () {
        var c = $('#locations').val();
        GenerateReport(c);
    });
    $(document).ready(function () {
        GenerateReport(0);
    });
    function GenerateReport(c) {
               $.fn.dataTable.ext.errMode = 'none';
            $('#example').on('error.dt', function () {
                    bootbox.alert('<h4>Unable to load data from Server. Please try after sometime</h4>');
        }).DataTable();
        $('#example').DataTable().destroy();
        $('#example tbody').empty();
        var dTable = $('#example').DataTable({
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            buttons: [
                {
                    extend: 'pdfHtml5',
                    title: 'EMPLOYEE LEAVE REPORT',
                    text: 'Export',
                    titleAttr: 'Export to Pdf'
                }
            ],
            'columnDefs': [
                {
                    'searchable': false,
                    'targets': [0, 1, 2]
                }
            ],

            sDom: '<"myexport"B>ifrtlp',
            lengthMenu: [
                [10, 25, -1],
                ['10', '25', 'All']
            ],
            ajax: {
                "url":'@Url.Action("LeaveCredits", "Leave")?LocationId='+c,
                "type": "POST",
                "datatype": "json",
                beforeSend: function () {
                    $('.ajax-loader').css("visibility", "visible");
                },
                complete: function () {
                    $('.ajax-loader').css("visibility", "hidden");
                }
            },
            "columns": [
                {
                    "data": null,"name":"Person.Location.LocationName", "autoWidth": true, render: function (row) {
                        return row.Person.Location.LocationName;
                    }
                },
                {
                    "data": null,"name":"Person.FullName", "autoWidth": true, render: function (row) {
                        return row.Person.FullName;
                    }
                },
                {
                    "data": "LeaveType","name":"LeaveType", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "ValidFrom","name":"ValidFrom", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "ValidTo","name":"ValidTo", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "AllotedDays","name":"AllotedDays" ,"autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "Available", "name": "Available", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    data: null, "autoWidth": true, render: function (data, type, row) {
                        var value = row.IsActive;
                        if (value == true) {
                            return '<div class="dropdown"> <button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu pull-right"><li><a onclick="fun(' + row.Id + ');">Edit</a></li><li><a class="inactive" id=' + row.Id + '>Delete</a></li></ul></div>';
                        } else {
                            return '<div class="dropdown"> <button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu pull-right"><li><a class="active" id=' + row.Id + '>Activate</a></li></ul></div>';
                        }
                    }
                }
            ]
        });
    }
      $('#example').on('click', 'a.inactive', function (e) {
        e.preventDefault();
        var id = $(this).attr("id");
        var message = "<h4>Do you want to delete this Leave Credit ?</h4>"
        bootbox.confirm(message, function (result) {
            if (result == true) {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("DeleteCredit", "Leave")?id=' + id,
                    success: function () {
                        bootbox.alert("Credit deleted successfully!", function () {
                            location.href = '@Url.Action("LeaveCredits", "Leave")';
                        });
                    },
                    error: function (xhr, status, error) {
                        if (xhr.status == 401) {
                            bootbox.alert("Access denied..Unable to Delete the Record");
                        } else {
                            bootbox.alert("Unable to Delete the Record");
                        }
                    }
                });
            }
        });
    });
    function fun(c) {
        var url = $("#modal-placeholder-editcredit").data('url');
        url = url + '?Id=' + c;
        $.get(url, function (data) {
            $("#modal-placeholder-editcredit").html(data);
            $("#modal-placeholder-editcredit").modal('show');
        }).fail(function (xhr, status, error) {
            if (xhr.status == 401) {
                bootbox.alert("<h4>Access denied..Unable to Edit the Record</h4>");
            } else {
                bootbox.alert("<h4>Unable to Edit the Record</h4>");
            }
        });
    }
    $("#btnModal").click(function () {
        var url = $("#modal-placeholder").data('url');
        $.get(url, function (data) {

            $("#modal-placeholder").html(data);
            $("#modal-placeholder").modal('show');
        }).fail(function (xhr, status, error) {
            if (xhr.status == 401) {
                bootbox.alert("<h4>Access denied..Unable to add the Record</h4>");
            } else {
                bootbox.alert("<h4>Unable to add the Record</h4>");
            }
        });
    });
</script>
<script src="~/Ems/js/jquery.dataTables.min.js"></script>
<script src="~/Ems/js/dataTables.buttons.min.js"></script>
<script src="~/Ems/js/pdfmake.min.js"></script>
<script src="~/Ems/js/vfs_fonts.js"></script>
<script src="~/Ems/js/buttons.html5.min.js"></script>
<script src="~/Ems/js/moment.js-2.8.4-moment.min.js"></script>
<script src="~/Ems/js/sorting-datetime-moment.js"></script>
<script src="~/Ems/js/dataTables.responsive.min.js"></script>


