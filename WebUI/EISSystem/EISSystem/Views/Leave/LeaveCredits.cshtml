@model IEnumerable<EIS.Entities.Leave.LeaveCredit>
<html>
<head>
    <title>Leave Credits</title>
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/rowReorder.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />

    <style>
        .dataTables_wrapper .myexport .dt-buttons {
            float: right;
        }
    </style>
</head>
<body>
    <div id="modal-placeholder" class="modal fade" role="dialog" data-url="@Url.Action("AddCredit")"></div>
    @*BootStrap Model*@
    <div class="container-fluid">
        <div class="block-header">
            <HeaderWithButton btn-id="btnModal" header-name="Leave Credits" btn-text="Add Credit" icon-name="add"></HeaderWithButton>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <table id="example" class="table table-bordered table-striped table-hover dt-responsive js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>
                                        Employee Name
                                    </th>

                                    <th>
                                        Leave Type
                                    </th>
                                    <th>
                                        Valid From
                                    </th>
                                    <th>
                                        Valid To
                                    </th>
                                    <th>
                                        Days
                                    </th>
                                    <th>
                                        Available
                                    </th>

                                </tr>
                            </thead>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<script src="~/lib/bootstrap/dist/js/bootbox.js"></script>
<script>
    $(document).ready(function () {
       $.fn.dataTable.ext.errMode = 'none';
            $('#example').on('error.dt', function () {
                    bootbox.alert('<h4>Unable to load data from Server. Please try after sometime</h4>');
            }).DataTable();
        var dTable = $('#example').DataTable({
            destroy: true,
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            buttons: [
                {
                    extend: 'pdfHtml5',
                    title: 'EMPLOYEE LEAVE REPORT',
                    text: 'Export',
                    titleAttr: 'Export to Pdf'
                }
            ],
            'columnDefs': [
                {
                    'searchable': false,
                    'targets': [0, 1, 2]
                }
            ],
            "aoColumnDefs": [
                { "aTargets": [1], "bSortable": true },
                { "aTargets": ['_all'], "bSortable": false }
            ],
            sDom: '<"myexport"B>ifrtlp',
            lengthMenu: [
                [10, 25, -1],
                ['10', '25', 'All']
            ],
            ajax: {
               // "url": "/Leave/LeaveCredits",
                "url":'@Url.Action("LeaveCredits", "Leave")',
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                {
                    "data": null, "autoWidth": true, render: function (row) {
                        return row.Person.FullName;
                    }
                },
                {
                    "data": "LeaveType", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "ValidFrom", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "ValidTo", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "AllotedDays", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "Available", "autoWidth": true, render: function (data) {
                        return data;
                    }
                }
            ],
            "initComplete": function () {
                var $searchInput = $('div.dataTables_filter input');
                $searchInput.unbind();
                $searchInput.bind('keyup', function (e) {
                    if (this.value.length >= 3 || this.value.length == 0) {
                        dTable.search(this.value).draw();
                    }
                });
            }
        });
        $("#btnModal").click(function () {
            var url = $("#modal-placeholder").data('url');
            $.get(url, function (data) {
                $("#modal-placeholder").html(data);
                $("#modal-placeholder").modal('show');
            });
        });
    });
</script>
<script src="~/Ems/js/jquery.dataTables.min.js"></script>
<script src="~/Ems/js/dataTables.buttons.min.js"></script>
<script src="~/Ems/js/pdfmake.min.js"></script>
<script src="~/Ems/js/vfs_fonts.js"></script>
<script src="~/Ems/js/buttons.html5.min.js"></script>
<script src="~/Ems/js/moment.min.js"></script>
<script src="~/Ems/js/sorting-datetime-moment.js"></script>
<script src="~/Ems/js/dataTables.responsive.min.js"></script>


