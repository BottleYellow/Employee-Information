@using EIS.WebApp.Services
@using EIS.Entities.OtherEntities;
@using Newtonsoft.Json

@using Microsoft.AspNetCore.Http;
@model IEnumerable<EIS.Entities.Leave.LeaveRequest>
@{
    string APIURL = MyHttpContext.APIBaseURL;
    string cookiesdata = Context.Session.GetString("CookieData");

    CookieModel cookies = new CookieModel();
    if (cookiesdata != null)
    {
        cookies = JsonConvert.DeserializeObject<CookieModel>(cookiesdata);
    }
}
<link href="~/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap-datetimepicker1.css" rel="stylesheet" />
<html>

<head>
    <title>My Leaves</title>
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />

    <style>
        .disabledLink {
            color: currentColor;
            cursor: not-allowed;
            opacity: 0.5;
            text-decoration: none;
        }

        li:hover {
            cursor: pointer;
        }

        select {
            border: solid;
        }

        .dataTables_wrapper .myexport .dt-buttons {
            float: right;
        }

        .ajax-loader {
            visibility: hidden;
            position: absolute;
            z-index: +100 !important;
            width: 80%;
            height: 80%;
        }

            .ajax-loader img {
                position: relative;
                top: 40%;
                left: 40%;
            }

        a {
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="ajax-loader">
        <img src="~/gif/Spinner.gif" />
    </div>
    <div id="modal-placeholder" class="modal fade" role="dialog" data-url="@Url.Action("AddPastLeave")"></div>
    <div class="container-fluid">
        <div class="block-header">
            @if (cookies.Role == "Admin")
            {
                <HeaderWithButton header-name="My Leave Requests"></HeaderWithButton>
            }
            else
            {
                <HeaderWithButton header-name="My Leave Requests" btn-href="location.href='@Url.Action("RequestLeave","Leave")'" btn-text="Future Leave" icon-name="add" btn-id2="btnModal" btn-text2="Past Leave" icon-name2="add"></HeaderWithButton>
            }

        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div>
                            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Leave Type</th>
                                        <th>From Date</th>
                                        <th>To Date</th>
                                        <th>Requested Days</th>
                                        <th>Status</th>
                                        <th>Leave Reason</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/js/pages/forms/basic-form-elements.js"></script>
<script src="~/js/pages/ui/modals.js"></script>
<script src="~/plugins/bootbox/bootbox.min.js"></script>
<script>
        $(document).ready(function () {
            $.fn.dataTable.ext.errMode = 'none';
            $('#example').on('error.dt', function () {
                bootbox.alert('<h4>Unable to load data from Server. Please try after sometime</h4>');
            }).DataTable();
            $('#example').DataTable().destroy();
            $('#example tbody').empty();
        var dTable = $('#example').DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            buttons: [
                {
                    extend: 'pdfHtml5',
                    title: 'Employee Report',
                    text: 'Export',
                    titleAttr: 'Export to Pdf',
                    orientation: 'landscape',
                    pageSize: 'LEGAL'
                }
            ],
            sDom: '<"myexport"B>ifrtlp',
            lengthMenu: [
                [10, 25, -1],
                ['10', '25', 'All']
            ],
            ajax: {
                "url":'@Url.Action("ShowMyLeaves", "Leave")',
                "type": "POST",
                "datatype": "json",
                beforeSend: function () {
                    $('.ajax-loader').css("visibility", "visible");
                },
                complete: function () {
                    $('.ajax-loader').css("visibility", "hidden");
                }
            },
            "columns": [
                {
                    "data": "LeaveType", "name": "LeaveType", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "FromDate",   "name": "FromDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "ToDate", "name": "ToDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "RequestedDays", "name": "RequestedDays", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                
                {
                    "data": "Status", "name": "Status", "autoWidth": true, render: function (data) {
                        if (data == "Pending") {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-warning">' + data + '</span>';
                        } else if (data == "Rejected" || data=="Cancelled") {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-danger">' + data + '</span>';
                        } else {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-success">' + data + '</span>';
                        }
                    }
                },
                {
                    "data": "Reason", "name": "Reason", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    data: null, "autoWidth": true, render: function (data, type, row) {
                        if (row.Status == "Rejected" || row.Status == "Cancelled" || row.Status == "Requested For Cancel" || row.Status =="Approved(Rejected Cancel Request)") {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu"><li><a class="disabledLink">Cancel Request</a></li></ul></div>';
                        }
                        else {
                            return '<div class="dropdown"> <button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu pull-right"><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Cancel\')">Cancel Request</a></li></ul></div>';
                        }

                    }
                }
            ]
        });
      
    });
    function UpdateStatus(RequestId, Status) {
        var url1 = "@APIURL/api/LeaveRequest/UpdateStatus/" + RequestId + "/" + Status + "/"+@cookies.PersonId;
        $.ajax({
            url: url1,
            type: 'POST',
            data: {},
            beforeSend: function () {
                $('.ajax-loader').css("visibility", "visible");
            },
            success: function (data) {
                bootbox.alert({
                    message: data,
                    callback: function () {
                        window.location.reload();
                    }
                });
            },
            error: function (data) {
                alert(data.responseText);
            },
            complete: function () {
                $('.ajax-loader').css("visibility", "hidden");
            }
        });
    }
    $("#btnModal").click(function () {
        var url = $("#modal-placeholder").data('url');
        $.get(url, function (data) {
            $("#modal-placeholder").html(data);
            $("#modal-placeholder").modal('show');
            
        }).fail(function (xhr, status, error) {
            if (xhr.status == 401) {
                bootbox.alert("<h4>Access denied..Unable to add the Record</h4>");
            } else {
                bootbox.alert("<h4>Unable to add the Record</h4>");
            }
        });
    });
</script>
