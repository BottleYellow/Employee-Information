@using EIS.WebApp.Services
@using EIS.Entities.OtherEntities;
@using Newtonsoft.Json

@using Microsoft.AspNetCore.Http;
@model IEnumerable<EIS.Entities.Leave.LeaveRequest>
@{
    string APIURL = MyHttpContext.APIBaseURL;
    RedisAgent Cache = new RedisAgent();
    string cookiesdata = Context.Session.GetString("CookieData");

    CookieModel cookies = new CookieModel();
    if (cookies != null)
    {
        cookies = JsonConvert.DeserializeObject<CookieModel>(cookiesdata);
    }
}
<html>

<head>
    <title>My Leaves</title>
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/rowReorder.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />

    <style>
        .disabledLink {
            color: currentColor;
            cursor: not-allowed;
            opacity: 0.5;
            text-decoration: none;
        }

        select {
            border: solid;
        }

        .dataTables_wrapper .myexport .dt-buttons {
            float: right;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="block-header">
            @if (cookies.Role== "Admin")
            {
                <HeaderWithButton header-name="My Leave Requests"></HeaderWithButton>
            }
            else
            {
                <HeaderWithButton header-name="My Leave Requests" btn-href="location.href='@Url.Action("RequestLeave","Leave")'" btn-text="Add Leave Request" icon-name="add"></HeaderWithButton>
            }

        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div>
                            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            Leave Type
                                        </th>
                                        <th>
                                            From Date
                                        </th>
                                        <th>
                                            To Date
                                        </th>
                                        <th>
                                            Days
                                        </th>
                                        <th>
                                            Available
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                        <th>
                                            Leave Reason
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/lib/bootstrap/dist/js/bootbox.js"></script>
<script>
        $(document).ready(function () {
            $.fn.dataTable.ext.errMode = 'none';
            $('#example').on('error.dt', function () {
                bootbox.alert('<h4>Unable to load data from Server. Please try after sometime</h4>');
            }).DataTable();
        var dTable = $('#example').DataTable({
            destroy: true,
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            buttons: [
                {
                    extend: 'pdfHtml5',
                    title: 'Employee Report',
                    text: 'Export',
                    titleAttr: 'Export to Pdf',
                    orientation: 'landscape',
                    pageSize: 'LEGAL'
                }
            ],
            'columnDefs': [
                {
                    'searchable': false,
                    'targets': [0, 1, 2]
                }
            ],
            "aoColumnDefs": [
                { "aTargets": [0], "bSortable": true },
                { "aTargets": ['_all'], "bSortable": false }
            ],
            sDom: '<"myexport"B>ifrtlp',
            lengthMenu: [
                [10, 25, -1],
                ['10', '25', 'All']
            ],
            ajax: {
                //"url": "/Leave/ShowMyLeaves",
                "url":'@Url.Action("ShowMyLeaves", "Leave")',
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                {
                    "data": "LeaveType", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "FromDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "ToDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "RequestedDays", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "Available", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "Status", "autoWidth": true, render: function (data) {
                        if (data == "Pending") {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-warning">' + data + '</span>';
                        } else if (data == "Rejected") {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-danger">' + data + '</span>';
                        } else {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-success">' + data + '</span>';
                        }
                    }
                },
                {
                    "data": "Reason", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    data: null, "autoWidth": true, render: function (data, type, row) {
                        if (row.Status == "Rejected" || row.Status == "Cancelled") {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu"><li><a class="disabledLink" onclick="javascript: UpdateStatus(' + row.Id + ',\'Cancel\')">Cancel Request</a></li></ul></div>';
                        }
                        else {
                            return '<div class="dropdown"> <button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu pull-right"><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Cancel\')">Cancel Request</a></li></ul></div>';
                        }

                    }
                }
            ],
            "initComplete": function () {
                var $searchInput = $('div.dataTables_filter input');
                $searchInput.unbind();
                $searchInput.bind('keyup', function (e) {
                    if (this.value.length >= 3 || this.value.length == 0) {
                        dTable.search(this.value).draw();
                    }
                });
            }
        });
        $("#btnModal").click(function () {
            var url = $("#modal-placeholder").data('url');
            $.get(url, function (data) {
                $("#modal-placeholder").html(data);
                $("#modal-placeholder").modal('show');
            });
        });
    });
    function UpdateStatus(RequestId, Status) {
        var url1 = "@APIURL/api/LeaveRequest/UpdateStatus/" + RequestId + "/" + Status + "";
        $.ajax({
            url: url1,
            type: 'POST',
            data: {},
            success: function (data) {
                window.location.reload();
            },
            error: function (data) {
                alert(data.responseText);
            }
        });
    }
</script>
<script src="~/Ems/js/jquery.dataTables.min.js"></script>
<script src="~/Ems/js/dataTables.buttons.min.js"></script>
<script src="~/Ems/js/pdfmake.min.js"></script>
<script src="~/Ems/js/vfs_fonts.js"></script>
<script src="~/Ems/js/buttons.html5.min.js"></script>
<script src="~/Ems/js/moment.js-2.8.4-moment.min.js"></script>
<script src="~/Ems/js/sorting-datetime-moment.js"></script>
<script src="~/Ems/js/dataTables.responsive.min.js"></script>



