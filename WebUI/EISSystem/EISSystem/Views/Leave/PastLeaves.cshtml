@using EIS.WebApp.Services
@using EIS.Entities.OtherEntities;
@using Newtonsoft.Json

@using Microsoft.AspNetCore.Http;
@model IEnumerable<EIS.Entities.Leave.PastLeaves>

@{
    string APIURL = MyHttpContext.APIBaseURL;
    RedisAgent Cache = new RedisAgent();
    string cookiesdata = Context.Session.GetString("CookieData");

    CookieModel cookies = new CookieModel();
    if (cookies != null)
    {
        cookies = JsonConvert.DeserializeObject<CookieModel>(cookiesdata);
    }

}
<html>
<head>
    <title>Past Leave Requests</title>
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/rowReorder.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />

    <link href="~/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-datetimepicker1.css" rel="stylesheet" />
    <style>
        select {
            border: solid;
        }

        .dataTables_wrapper .myexport .dt-buttons {
            float: right;
        }

        a {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div id="modal-placeholder" class="modal fade" role="dialog" data-url="@Url.Action("AddPastLeave")"></div>
    <div class="container-fluid">
        <div class="block-header">
            @if (cookies.Role == "Admin")
            {
                <HeaderWithButton header-name="Past Leave Requests"></HeaderWithButton>
            }
            else
            {
                <HeaderWithButton btn-id="btnModal" header-name="Past Leave Requests" btn-text="Add Past Leave" icon-name="add"></HeaderWithButton>
            }
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div>
                            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            Employee Name
                                        </th>

                                        <th>
                                            From Date
                                        </th>
                                        <th>
                                            To Date
                                        </th>
                                        <th>
                                            Requested Days
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                        <th>
                                            Leave Reason
                                        </th>

                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<script src="~/lib/bootstrap/dist/js/bootbox.js"></script>
<script>
        $(document).ready(function () {
            $.fn.dataTable.ext.errMode = 'none';
            $('#example').on('error.dt', function () {
                bootbox.alert('<h4>Unable to load data from Server. Please try after sometime</h4>');
            }).DataTable();
        var dTable = $('#example').DataTable({
            destroy: true,
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            buttons: [
                {
                    extend: 'pdfHtml5',
                    title: 'EMPLOYEE PAST LEAVE REPORT',
                    text: 'Export',
                    titleAttr: 'Export to Pdf'
                }
            ],
            'columnDefs': [
                {
                    'searchable': false,
                    'targets': [0, 1, 2]
                }
            ],
            "aoColumnDefs": [
                { "aTargets": [0], "bSortable": true },
                { "aTargets": [1], "bSortable": true },
                { "aTargets": ['_all'], "bSortable": false }
            ],
            sDom: '<"myexport"B>ifrtlp',
            lengthMenu: [
                [10, 25, -1],
                ['10', '25', 'All']
            ],
            ajax: {
                //"url": "/Leave/PastLeaves",
                "url":'@Url.Action("PastLeaves", "Leave")',
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                {
                    "data": "EmployeeName", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "FromDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "ToDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "RequestedDays", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "Status", "autoWidth": true, render: function (data) {
                        if (data == "Approved") {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-success">' + data + '</span>';
                        } else if (data == "Rejected" || data == "Cancelled") {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-danger">' + data + '</span>';
                        } else {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-warning">' + data + '</span>';
                        }
                    }
                },
                {
                    "data": "Reason", "autoWidth": true, render: function (data) {
                        return data;
                    }
                }

            ],
            "initComplete": function () {
                var $searchInput = $('div.dataTables_filter input');
                $searchInput.unbind();
                $searchInput.bind('keyup', function (e) {
                    if (this.value.length >= 3 || this.value.length == 0) {
                        dTable.search(this.value).draw();
                    }
                });
            }
        });
        $("#btnModal").click(function () {
            var url = $("#modal-placeholder").data('url');
            $.get(url, function (data) {
                $("#modal-placeholder").html(data);
                $("#modal-placeholder").modal('show');
                $('#date1').datetimepicker({
                    format: "DD/MMM/YYYY"
                });
                $('#date2').datetimepicker({
                    format: "DD/MMM/YYYY"
                });
            });
        });
    });
    function UpdateStatus(RequestId, Status) {
        var url1 = "@APIURL/api/LeaveRequest/UpdateStatus/" + RequestId + "/" + Status + "";
        $.ajax({
            url: url1,
            type: 'POST',
            data: {},
            success: function (data) {
                window.location.reload();
            },
            error: function (data) {
                alert(data.responseText);
            }
        });
    }
</script>

