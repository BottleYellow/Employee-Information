<script src="~/plugins/jquery-datatable/jquery.dataTables.js"></script>
<script src="~/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>

<script src="~/js/pages/forms/basic-form-elements.js"></script>
<script src="~/js/pages/ui/modals.js"></script>
<script src="~/plugins/bootbox/bootbox.min.js"></script>
<script>
    $(document).ready(function () {
        var d = new Date();
        d.setDate(d.getDate());
        $("#fromDate").datetimepicker({
            format: "DD-MMM-YYYY",
            defaultDate: d
        });
        $("#toDate").datetimepicker({
            format: "DD-MMM-YYYY",
            defaultDate: d
        });
        var fromDate = $('#fromDate').val();
        var toDate = $('#toDate').val();
        GenerateReport(0,fromDate,toDate);
    });

    $('#generateReport').on('click', function () {
        var locationValue = $('#locations').val();
        var fromDate = $('#fromDate').val();
        var toDate = $('#toDate').val();
        GenerateReport(locationValue,fromDate,toDate);
    });

    function GenerateReport(location,fromDate,toDate) {
               $.fn.dataTable.ext.errMode = 'none';
            $('#example').on('error.dt', function () {
                    bootbox.alert('<h4>Unable to load data from Server. Please try after sometime</h4>');
            }).DataTable();
        $('#example').DataTable().destroy();
        $('#example tbody').empty();
        var dTable = $('#example').DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "order":[8,'desc'],
            buttons: [
                {
                    extend: 'pdfHtml5',
                    title: 'EMPLOYEE LEAVE REQUEST',
                    text: 'Export',
                    titleAttr: 'Export to Pdf'
                }
            ],
            "aoColumnDefs": [
                { "aTargets": [0], "bSortable": false },
                { "aTargets": ['_all'], "bSortable": true }
            ],
            sDom: '<"myexport"B>ifrtlp',
            lengthMenu: [
                [10, 25, -1],
                ['10', '25', 'All']
            ],
            ajax: {
                //"url": "/Leave/EmployeeLeaveRequests",
                "url": '@Url.Action("EmployeeLeaveRequests", "Leave")?LocationId=' + location + '&fromDate=' + fromDate + '&toDate=' + toDate,
                "type": "POST",
                "datatype": "json",       
            },
            "columns": [
                {
                    data: null, "autoWidth": true, render: function (data, type, row) {
                        if (row.Status == "Pending") {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" >build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Approve\')">Approve</a></li><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Reject\')">Reject</a></li></ul></div>';
                        }
                        else if (row.Status == "Approved") {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" >build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Pending\')">Mark Pending</a></li><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Reject\')">Reject</a></li></ul></div>';
                        }
                        else if (row.Status == "Requested For Cancel") {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" >build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Accept Cancel\')">Accept Cancel</a></li><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Reject Cancel\')">Reject Cancel</a></li></ul></div>';
                        }
                        else {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu"><li><a class="disabledLink">Approve</a></li><li><a class="disabledLink">Mark Pending</a></li></ul></div>';
                        }
                    }
                },
                {
                    "data": "Person.Location.LocationName", "name": "Person.Location.LocationName", "autoWidth": true, render: function (data, type, row) {
                        return row.Person.Location.LocationName;
                    }
                },
                {
                    "data": "EmployeeName","name": "EmployeeName", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "LeaveType", "name": "LeaveType", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "FromDate","name": "FromDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "ToDate","name": "ToDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "RequestedDays","name": "RequestedDays", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "Available","name": "Available", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "AppliedDate","name": "AppliedDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format("DD MMM YYYY");
                        return data;
                    }
                },
                {
                    "data": "Status","name":"Status", "autoWidth": true, render: function (data) {
                        if (data == "Approved") {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-success">' + data + '</span>';
                        } else if (data == "Rejected" || data == "Cancelled") {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-danger">' + data + '</span>';
                        } else {
                            return '<span style="font-size:14px; font-weight:normal;" class="label label-warning">' + data + '</span>';
                        }
                    }
                },
                {
                    "data": "Reason","name": "Reason", "autoWidth": true, render: function (data) {
                        return data;
                    }
                }
            ]
        });
    }
    function UpdateStatus(RequestId, Status) {
        var pid=@cookies.PersonId;
        var url1 = "@APIURL/api/LeaveRequest/UpdateStatus/" + RequestId + "/" + Status + "/" + pid + "";
        $.ajax({
            url: url1,
            type: 'POST',
            data: {},
            beforeSend: function () {
                $('.ajax-loader').css("visibility", "visible");
            },
            success: function (data) {
                bootbox.alert(
                    data,
                    function () {
                        window.location.reload();
                    }
                );
            },
            error: function (data) {
                alert(data.responseText);
            },
            complete: function () {
                $('.ajax-loader').css("visibility", "hidden");
            }
        });
    }
</script>
