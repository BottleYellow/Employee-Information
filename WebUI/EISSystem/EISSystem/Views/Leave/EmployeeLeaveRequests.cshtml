</head>
<body>
    <div class="ajax-loader">
        <img src="~/gif/Spinner.gif" />
    </div>
    <div class="container-fluid">
        <div class="block-header">
            <HeaderWithButton header-name="Leave Request"></HeaderWithButton>
        </div>
        <div class="row clearfix">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <label>Select Location</label>
                                <select id="locations" asp-items="@(new SelectList(@ViewBag.Locations,"Id","LocationName"))" class="form-control show-tick">
                                    <option value="0">All</option>
                                </select>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                                <label>From Date</label>
                                <input class="form-control" type="text" id="fromDate" value=@DateTime.Now.Date />
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-6 col-sm-12">
                                <label>To Date</label>
                                <input class="form-control" type="text" id="toDate" value=@DateTime.Now.Date />
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-6 col-sm-12">
                                <br />
                                <input class=" form-control" type="button" id="generateReport" value="Generate" style="font-weight:bold; font-size:16px; height:40px; background-color:#3399ff; color:white;" />
                            </div>
                        </div>
                        <div>
                            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Actions</th>
                                        <th>Location</th>
                                        <th>Employee Name</th>
                                        <th>Leave Type</th>
                                        <th>From Date</th>
                                        <th>To Date</th>
                                        <th>Days</th>
                                        <th>Available</th>
                                        <th>Requested Date</th>
                                        <th>Status</th>
                                        <th>Leave Reason</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
