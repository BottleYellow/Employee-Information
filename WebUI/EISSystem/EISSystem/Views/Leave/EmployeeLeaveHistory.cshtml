<script src="~/plugins/bootbox/bootbox.min.js"></script>
<script>
    $(document).ready(function () {
        var locationValue = $('#locations').val();
        var employeeValue = $('#selectEmployee').val();
        var type = $('#selectReport').val(); 
        var leaveType = $('#leaveOption').val();
        $.ajax({
            type: 'GET',
            url: '@MyHttpContext.APIBaseURL/api/Employee/GetLocations/' + locationValue,
            success: function (data) {
                $.each(data, function (data, value) {
                    $('#selectEmployee').append($("<option></option>").val(this.id).html(this.fullName));
                });
            },
            error: function () {
                bootbox.alert("Something went wrong..Please try after sometime");
            }
        });
        var value="";
        var currentDate = new Date();
        var m = ((currentDate.getMonth() + 1) >= 10) ? (currentDate.getMonth() + 1) : '0' + (currentDate.getMonth() + 1);
        var y = new Date().getFullYear();
        $('#inputmonth').datetimepicker({
            format: "MM/YYYY"
        });
        $('#inputmonth').val(m + '/' + y);
        $('#inputyear').val(y);
        $('#inputmonth').datetimepicker({
            format: "MM/YYYY"
        });
        $('#inputyear').datetimepicker({
            format: "YYYY"
        });
        value = $('#inputmonth').val();
        GenerateReport(locationValue, employeeValue, type, value, leaveType);
       
    });

    $('#selectReport').on('change', function () {
        var v = $('#selectReport').val();
        if (v == 'year') {
            $('#inputmonthdiv').hide();
            $('#inputyeardiv').show();
        } else
            if (v == 'month') {
                $('#inputyeardiv').hide();
                $('#inputmonthdiv').show();
            }
    });
  
    $('#inputyear').on('change', function () {
        value = $('#inputyear').val();
    });

    $('#inputmonth').on('change', function () {
        value = $('#inputmonth').val();
    });

    $('#generateReport').on('click', function () {
        var locationValue = $('#locations').val();
        var employeeValue = $('#selectEmployee').val();
        var leaveType = $('#leaveOption').val();
        var type = $('#selectReport').val();       
        if (type == 'month') {
            value = $('#inputmonth').val();
        } else {
            value = $('#inputyear').val();
        }
    
        GenerateReport(locationValue,employeeValue, type, value, leaveType);
    });

    function GenerateReport(locationId,employeeId,type,value,leaveType) {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("EmployeeLeaveHistory", "Leave")?value=' + value + '&type=' + type + '&leaveType=' + leaveType + '&employeeId=' + employeeId + '&locationId=' + locationId,
            dataType: 'JSON',
            beforeSend: function () {
                $('ajax-loader').css("visibility", "visible");
            },
            success: function (data) {
                debugger;
                var array = [];
                var action;        
                for (var i = 0; i < data.length; i++) {
                    var status = data[i].Status;
                    var fromDate = moment(data[i].FromDate).format("DD MMM YYYY");
                    var toDate = moment(data[i].ToDate).format("DD MMM YYYY");
                    var appliedDate = moment(data[i].AppliedDate).format("DD MMM YYYY");
                    if (status == "Pending") {
                        action = '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" >build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + data[i].Id + ',\'Approve\')">Approve</a></li><li><a onclick="javascript: UpdateStatus(' + data[i].Id + ',\'Reject\')">Reject</a></li></ul></div>';
                        status = '<span style="font-size:14px; font-weight:normal;" class="label label-warning">' + status + '</span>';
                    }
                    else if (status == "Approved") {
                        status = '<span style="font-size:14px; font-weight:normal;" class="label label-success">' + status + '</span>';
                        action = '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" >build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + data[i].Id + ',\'Pending\')">Mark Pending</a></li><li><a onclick="javascript: UpdateStatus(' + data[i].Id + ',\'Reject\')">Reject</a></li></ul></div>';
                    }
                    else if (status == "Requested For Cancel") {
                        action = '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" >build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + data[i].Id + ',\'Accept Cancel\')">Accept Cancel</a></li><li><a onclick="javascript: UpdateStatus(' + data[i].Id + ',\'Reject Cancel\')">Reject Cancel</a></li></ul></div>';
                        status = '<span style="font-size:14px; font-weight:normal;" class="label label-danger">' + status + '</span>';
                    }
                    else {
                        action = '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu"><li><a class="disabledLink">Approve</a></li><li><a class="disabledLink">Mark Pending</a></li></ul></div>';
                        status = '<span style="font-size:14px; font-weight:normal;" class="label label-danger">' + status + '</span>';
                    }
                    array.push([action, data[i].LocationName, data[i].EmployeeName, data[i].LeaveType, fromDate, toDate, data[i].RequestedDays, data[i].Available, appliedDate, status, data[i].ApprovedName, data[i].Reason])
                }
                $('#example').DataTable().destroy();
                $('#example').DataTable({
                    order:[[9,'desc'],[8,'desc']],
                    data:array
                });
            },
            complete: function () {
                $('ajax-loader').css("visibility", "hidden");
            }
        });         
    }
    function UpdateStatus(RequestId, Status) {
        var pid=@cookies.PersonId;
        var url1 = "@APIURL/api/LeaveRequest/UpdateStatus/" + RequestId + "/" + Status + "/" + pid + "";
        $.ajax({
            url: url1,
            type: 'POST',
            data: {},
            beforeSend: function () {
                $('.ajax-loader').css("visibility", "visible");
            },
            success: function (data) {
                bootbox.alert(
                    data,
                    function () {
                        window.location.reload();
                    }
                );
            },
            error: function () {
                bootbox.alert("Something went wrong..Please try after sometime");
            },
            complete: function () {
                $('.ajax-loader').css("visibility", "hidden");
            }
        });
    }

     $('#locations').on('change', function () {
            var loc = $('#locations').val();
            $.ajax({
                type: 'GET',
                url: '@MyHttpContext.APIBaseURL/api/Employee/GetLocations/' + loc,
                success: function (data) {
                    $.each(data, function (data, value) {
                        $('#selectEmployee').append($("<option></option>").val(this.id).html(this.fullName));
                    });
                },
                error: function () {
                    bootbox.alert("Something went wrong..Please try after sometime");
                }

            });
        });
</script>
