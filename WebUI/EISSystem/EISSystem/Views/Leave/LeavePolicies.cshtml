@model IEnumerable<EIS.Entities.Leave.LeaveRules>
@{
    if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                /*toastr.options.timeOut = 5000;*/ // 5s
                toastr.options = {
                    "debug": false,
                    "positionClass": "toast-top-right",
                    "onclick": null,
                    "fadeIn": 300,
                    "fadeOut": 1000,
                    "timeOut": 5000,
                    "extendedTimeOut": 1000
                }
                toastr.success("@ViewBag.Message");
            });
        </script>
        ViewBag.Message = null;
    }
}

<html>
<head>
    <title>Leave Policies</title>
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/rowReorder.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />

    <style>
        .dataTables_wrapper .myexport .dt-buttons {
            float: right;
        }
    </style>
</head>
<body>
    <div id="modal-placeholder" class="modal fade" role="dialog" data-url="@Url.Action("AddPolicy")"></div>
    @*BootStrap Model*@
    <div class="container-fluid">
        <div class="block-header">
            <HeaderWithButton btn-id="btnModal" header-name="Leave Policies" btn-text="Add New" icon-name="add"></HeaderWithButton>
        </div>
        <div class="row clearfix">
            <div class="row">
                <div class="col-md-9" style="height:50px">
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <select id="locations" asp-items="@(new SelectList(@ViewBag.Locations,"Id","LocationName"))" class="form-control show-tick">
                            <option value="0">All</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div>
                            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Location</th>
                                        <th>Leave type</th>
                                        <th>Validity</th>
                                        <th>Valid From</th>
                                        <th>Valid To</th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/lib/bootstrap/dist/js/bootbox.js"></script>
<script>
    $('#locations').on('change', function () {
        var c = $('#locations').val();
        GenerateReport(c);
    });
    $(document).ready(function () {
        GenerateReport(0);

    });
    function GenerateReport(c) {
             $.fn.dataTable.ext.errMode = 'none';
            $('#example').on('error.dt', function () {
                    bootbox.alert('<h4>Unable to load data from Server. Please try after sometime</h4>');
        }).DataTable();
        $('#example').DataTable().destroy();
        $('#example tbody').empty();
        var dTable = $('#example').DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            buttons: [
                {
                    extend: 'pdfHtml5',
                    title: 'EMPLOYEE LEAVE POLICY',
                    text: 'Export',
                    titleAttr: 'Export to Pdf'
                }
            ],
            sDom: '<"myexport"B>ifrtlp',
            lengthMenu: [
                [10, 25, -1],
                ['10', '25', 'All']
            ],
            ajax: {
                //"url": "/Leave/LeavePolicies",
                "url":'@Url.Action("LeavePolicies", "Leave")?LocationId='+c,
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                {
                    "data": "Location.LocationName", "name": "Location.LocationName", "autoWidth": true, render: function (data, type, row) {
                        return row.Location.LocationName;
                    }
                },
                {
                    "data": "LeaveType", "name": "LeaveType", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "Validity",  "name": "Validity", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "ValidFrom", "name": "ValidFrom", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "ValidTo", "name": "ValidTo", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                }

            ],
            "initComplete": function () {
                var $searchInput = $('div.dataTables_filter input');
                $searchInput.unbind();
                $searchInput.bind('keyup', function (e) {
                    if (this.value.length >= 3 || this.value.length == 0) {
                        dTable.search(this.value).draw();
                    }
                });
            }
        });
    }
    $("#btnModal").click(function () {
        var url = $("#modal-placeholder").data('url');
        $.get(url, function (data) {
            $("#modal-placeholder").html(data);
            $("#modal-placeholder").modal('show');
        });
    });
</script>
<script src="~/Ems/js/jquery.dataTables.min.js"></script>
<script src="~/Ems/js/dataTables.buttons.min.js"></script>
<script src="~/Ems/js/pdfmake.min.js"></script>
<script src="~/Ems/js/vfs_fonts.js"></script>
<script src="~/Ems/js/buttons.html5.min.js"></script>
<script src="~/Ems/js/moment.js-2.8.4-moment.min.js"></script>
<script src="~/Ems/js/sorting-datetime-moment.js"></script>
<script src="~/Ems/js/dataTables.responsive.min.js"></script>