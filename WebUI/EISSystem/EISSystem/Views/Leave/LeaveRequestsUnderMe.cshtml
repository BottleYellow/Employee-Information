<script>
    $(document).ready(function () {
        var dTable = $('#example').DataTable({
            destroy: true,
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            buttons: [
                {
                    extend: 'pdfHtml5',
                    title: 'Employee Report',
                    text: 'Export',
                    titleAttr: 'Export to Pdf',
                    orientation: 'landscape',
                    pageSize: 'LEGAL'
                }
            ],
            'columnDefs': [
                {
                    'searchable': false,
                    'targets': [0, 1, 2]
                }
            ],
            "aoColumnDefs": [
                { "aTargets": [0], "bSortable": true },
                { "aTargets": ['_all'], "bSortable": false }
            ],
            sDom: '<"myexport"B>ifrtlp',
            lengthMenu: [
                [5, 10, 25, -1],
                ['5', '10', '25', 'All']
            ],
            ajax: {
                "url": "/Leave/LeaveRequestsUnderMe",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                {
                    "data": "EmployeeName", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "LeaveType", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "FromDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "ToDate", "autoWidth": true, render: function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }
                },
                {
                    "data": "RequestedDays", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "Available", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    "data": "Status", "autoWidth": true, render: function (data) {
                        if (data == "Approved") {
                            return '<span style="font-size:12px;" class="label label-success">' + data + '</span>';
                        } else if (data == "Rejected" || data == "Cancelled") {
                            return '<span style="font-size:12px;" class="label label-danger">' + data + '</span>';
                        } else {
                            return '<span style="font-size:12px;" class="label label-warning">' + data + '</span>';
                        }
                    }
                },
                {
                    "data": "Reason", "autoWidth": true, render: function (data) {
                        return data;
                    }
                },
                {
                    data: null, "autoWidth": true, render: function (data, type, row) {
                        if (row.Status == "Pending") {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Approve\')">Approve</a></li><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Reject\')">Reject</a></li></ul></div>';
                        }
                        else if (row.Status == "Approved") {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Pending\')">Mark Pending</a></li><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Reject\')">Reject</a></li></ul></div>';
                        }
                        else if (row.Status == "Requested For Cancel") {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Accept Cancel\')">Accept Cancel</a></li><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Reject Cancel\')">Reject Cancel</a></li></ul></div>';
                        }
                        else {
                            return '<div class="dropdown"><button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">build</i></button><ul class="dropdown-menu"><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Approve\')">Approve</a></li><li><a onclick="javascript: UpdateStatus(' + row.Id + ',\'Pending\')">Mark Pending</a></li></ul></div>';
                        }
                    }
                }
            ],
            "initComplete": function () {
                var $searchInput = $('div.dataTables_filter input');
                $searchInput.unbind();
                $searchInput.bind('keyup', function (e) {
                    if (this.value.length >= 3 || this.value.length == 0) {
                        dTable.search(this.value).draw();
                    }
                });
            }
        });
    });

    function UpdateStatus(RequestId, Status) {
        var url1 = "http://localhost:54830/api/LeaveRequest/UpdateStatus/" + RequestId + "/" + Status + "";
        $.ajax({
            url: url1,
            type: 'POST',
            data: {},
            success: function (data) {
                window.location.reload();
            },
            error: function (data) {
                alert(data.responseText);

            }
        });
    }


</script>


