@model IEnumerable<EIS.Entities.Employee.Attendance>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_FinalLayout.cshtml";
}
<div>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Select Year</h4>
                </div>
                <div class="modal-body">
                    <select id="year1" class="year" style="width:200px; height:30px;"></select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>
<div>
    <div class="modal fade" id="myModal1" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="row col-md-12">
                            <div class="col-md-4">Select Month : </div>
                            <div class="col-md-4"><select id="month1" class="month" style="width:200px; height:30px;"></select></div>
                            <br /><br />
                            <div class="col-md-4">Select Year  : </div>
                            <div class="col-md-4"><select id="year2" class="year" style="width:200px; height:30px;"></select></div>
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>
<div>
    <div class="modal fade" id="myModal2" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Select Year</h4>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="row col-md-12">
                            <div class="col-md-4">Select Week :</div>
                            <div class="col-md-4"><select id="week" class="week" style="width:200px; height:30px;"></select></div>
                        </div>
                        <br /><br />
                        <div class="row col-md-12">
                            <div class="col-md-4">Select Month :</div>
                            <div class="col-md-4"><select id="month2" class="month" style="width:200px; height:30px;"></select></div>
                        </div>
                        <br /><br />
                        <div class="row col-md-12">
                            <div class="col-md-4">Select Year :</div>
                            <div class="col-md-4"><select id="year3" class="year" style="width:200px; height:30px;"></select></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>
<html>
<head>
    <link href="~/css/attendance.css" rel="stylesheet" />
    
</head>
<body>

    <div class="row col-md-12">
        <div>
            <button type="button" class="btn btn-primary btn-lg raised form-control" style="font-size:large; height:50px">In</button>
        </div>
    </div>
    
    <br /><br /><br /><br />
    <div class="row col-md-12">
        <div class="col-md-3">
            <select id="select" class="select" style="width:200px; height:40px; text-align-last:center">
                <option value="select">Select option</option>
            </select>
        </div>
    </div>
    <br /><br />
    <br /><br />
    <div id="wizard" style="display:none;">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">

                        <table id="example" class="table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Date In
                                    </th>

                                    <th>
                                        Time In
                                    </th>
                                    <th>
                                        Date Out
                                    </th>

                                    <th>
                                        Time Out
                                    </th>

                                    <th>
                                        Total Hours
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateIn)
                                        </td>
                                        <td>
                                            @string.Format("{0:D2}:{1:D2}:{2:D2}", item.TimeIn.Hours, item.TimeIn.Minutes, item.TimeIn.Seconds)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateOut)
                                        </td>

                                        <td>
                                            @string.Format("{0:D2}:{1:D2}:{2:D2}", item.TimeOut.Hours, item.TimeOut.Minutes, item.TimeOut.Seconds)
                                        </td>

                                        <td>
                                            @string.Format("{0:D2}:{1:D2}:{2:D2}", item.TotalHours.Hours, item.TotalHours.Minutes, item.TotalHours.Seconds)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<script type="text/javascript">


// Create In and Out Attendance
$('.btn').click(function () {
    var $this = $(this);
    $this.toggleClass('btn');
    
    if ($this.hasClass('btn')) {
        $this.text('In');
       
        $.ajax({
            type: "POST",
            url: '@Url.Action("Update", "Attendance")',
            
        });
    } else {
        $this.text('Out');
        $.ajax({
            type: "POST",
            url: '@Url.Action("Create", "Attendance")'
        });
    }
    });
   
   
    // For adding dropdown values
    window.onload = function addList() {
        var select = document.getElementById("select");
        var selected=["Year","Month","Week"]
        for (var i = 2; i>=0; --i) {
            var option = document.createElement('option');
            option.text = option.value = selected[i];
            select.add(option, 0);
        }

        //for Years
        var year = this.document.getElementById('year1');
        for (var i = @DateTime.Now.Year+10; i >=@DateTime.Now.Year; i--) {
            var option = this.document.createElement('option');
            option.text = option.value = i;
            year.add(option, 0);
        }
        var year1 = this.document.getElementById('year2');
        for (var i = @DateTime.Now.Year+10; i >=@DateTime.Now.Year; i--) {
            var option = this.document.createElement('option');
            option.text = option.value = i;
            year1.add(option, 0);
        }
        var year2 = this.document.getElementById('year3');
        for (var i = @DateTime.Now.Year+10; i >=@DateTime.Now.Year; i--) {
            var option = this.document.createElement('option');
            option.text = option.value = i;
            year2.add(option, 0);
        }

        //for months
        var month1 = this.document.getElementById("month1");
        var monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
        for (var i = 11; i >=0; i--) {
            var option = this.document.createElement('option');
            option.text = option.value = monthNames[i];
            month1.add(option, 0);
        }

        var month2 = this.document.getElementById("month2");
        var monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
        for (var i = 11; i >= 0; i--) {
            var option = this.document.createElement('option');
            option.text = option.value = monthNames[i];
            month2.add(option, 0);
        }

        //for weeks
        var week = this.document.getElementById("week");
        var weekNames = ["Week1", "Week2", "Week3", "Week4", "Week5"];
        for (var i = 4; i >= 0; i--) {
            var option = this.document.createElement('option');
            option.text = option.value = weekNames[i];
            week.add(option, 0);
        }
    };
   
    $(document).ready(function () {
        var selOption = "";
        
        $("select.select").change(function () {
            selOption = $(this).children("option:selected").val();
            if (selOption == 'Year') {
                $("#myModal").modal();
            }
            else if (selOption == 'Month') {
                
                $("#myModal1").modal();
            }
            else if (selOption == 'Week') {
                $("#myModal2").modal();
            }
        });
    });

</script>


