<script src="~/Ems/js/jquery.dataTables.min.js"></script>
<script src="~/Ems/js/dataTables.buttons.min.js"></script>
<script src="~/Ems/js/pdfmake.min.js"></script>
<script src="~/Ems/js/vfs_fonts.js"></script>
<script src="~/Ems/js/buttons.html5.min.js"></script>
<script src="~/Ems/js/moment.js-2.8.4-moment.min.js"></script>
<script src="~/Ems/js/sorting-datetime-moment.js"></script>
<script src="~/Ems/js/dataTables.responsive.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootbox.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('#generateReport').prop('disabled', true);
        $('select[id="selectEmployee"]').find('option[value=' + 1 + ']').attr("selected", true);
        $("#fromdate").datetimepicker({
            format: 'DD/MM/YYYY'
        });
        $("#todate").datetimepicker({
            format: 'DD/MM/YYYY'
        });

        $('#selectEmployee').on('change', function () {
            if ($(this).children("option:selected").text() == "-- Select --") {
                $('#generateReport').prop('disabled', true);
            } else {
                $('#generateReport').removeAttr('disabled');
            }

        })

        $('#generateReport').on('click', function () {
            var id = $('#selectEmployee').val();
            var empName = $('#selectEmployee').children("option:selected").text();
            //var empName = $('#selectEmployee').text();
        var fromValue = $("#fromdate").val();
        var toValue = $("#todate").val();
            generateReport(fromValue, toValue, id,empName);
            });

        function generateReport(fromValue, toValue, id,empName) {
     $.fn.dataTable.ext.errMode = 'none';
            $('#example').on('error.dt', function () {
                    bootbox.alert('<h4>Unable to load data from Server. Please try after sometime</h4>');
            }).DataTable();
            var dTable = $('#example').DataTable({
                destroy: true,
                sDom: '<"myexport"B>ifrtlp',
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                buttons: [
                    {
                        extend: 'pdfHtml5',
                        title: 'ATTENDANCE REPORT',
                        text: 'Export',
                        titleAttr: 'Export to Pdf',
                        orientation: 'landscape',
                        pageSize: 'LEGAL'
                    }
                ],
                "aoColumnDefs": [
                    { "aTargets": [0], "bSortable": true },
                    { "aTargets": ['_all'], "bSortable": false }
                ],

                lengthMenu: [
                    [10, 25, -1],
                    ['10', '25', 'All']
                ],
                ajax: {
                    //"url": "/Attendance/DateWiseAttendance",
                    "url": '@Url.Action("DateWiseAttendance", "Attendance")?fromdate=' + fromValue + '&todate=' + toValue + '&id='+id,
                    "type": "POST",
                    "datatype": "json",
                    //"data": { "fromdate": fromValue, "todate": toValue,"id":id},
                },
                "columns": [
                    {
                        "data": null,  "autoWidth": true, render: function () {
                            return id;
                        }
                    },
                    {
                        "data": "DateIn", "name": "DateIn", "autoWidth": true, render: function () {
                            return empName;
                        }
                    },
                    {
                        "data": "DateIn", "name": "DateIn", "autoWidth": true, render: function (data, type, row) {
                            data = moment(data).format('DD MMM YYYY');
                            return data;
                        }
                    },
                    {
                        data: "IsActive", "autoWidth": true, render: function (data, type, row) {
                            if (new Date(row.DateIn).getDay() == 0 && row.TimeIn == row.TimeOut) {
                                return '<span style="font-size:14px; font-weight:normal;" class="label label-warning">Weekly Holiday</span>';
                            }
                            else if (new Date(row.DateIn).getDay() == 6 && calculate(row.DateIn) != "NotFound") {
                                return '<span style="font-size:14px; font-weight:normal;" class="label label-warning">' + calculate(row.DateIn) + '</span>';
                            }
                            else if (data == true) {
                                return '<span style="font-size:14px; font-weight:normal;" class="label label-success">Present</span>';
                            } else {
                                var dateIn = moment(row.DateIn).format('L');
                                var date = moment(new Date()).format('L');
                                return '<span style="font-size:14px; font-weight:normal;" class="label label-danger">Absent</span>';
                            }
                        }
                    },
                    {
                        "data": "TotalHours", "autoWidth": true, render: function (data, type, row) {
                            if (row.TimeIn == row.TimeOut) { return "-"; }
                            data = moment(data, "HH:mm:ss").format("mm:ss");
                            return data;
                        }
                    }
                ],
                "initComplete": function () {
                    var $searchInput = $('div.dataTables_filter input');
                    $searchInput.unbind();
                    $searchInput.bind('keyup', function (e) {
                        if (this.value.length >= 3 || this.value.length == 0) {
                            dTable.search(this.value).draw();
                        }
                    });
                }
            });
        }
    });
    function calculate(date) {
        var d = new Date(date);
        var mon = d.toLocaleString('en-us', { month: 'long' });
        var yea = d.getFullYear();
        var dat = 1;
        myDays = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
        myDate = new Date(eval('"' + dat + ',' + mon + ',' + yea + '"'))
        var first = myDays[myDate.getDay()];
        //alert(first);
        var secnd;
        var forth;
        switch (first) {
            case "Sunday":
                secnd = yea + '-' + mon + '-' + 14;
                forth = yea + '-' + mon + '-' + 28;
                break;
            case "Monday":
                secnd = yea + '-' + mon + '-' + 13;
                forth = yea + '-' + mon + '-' + 27;
                break;
            case "Tuesday":
                secnd = yea + '-' + mon + '-' + 12;
                forth = yea + '-' + mon + '-' + 26;
                break;
            case "Wednesday":
                secnd = yea + '-' + mon + '-' + 11;
                forth = yea + '-' + mon + '-' + 25;
                break;
            case "Thursday":
                secnd = yea + '-' + mon + '-' + 10;
                forth = yea + '-' + mon + '-' + 24;
                break;
            case "Friday":
                secnd = yea + '-' + mon + '-' + 9;
                forth = yea + '-' + mon + '-' + 23;
                break;
            case "Saturday":
                secnd = yea + '-' + mon + '-' + 8;
                forth = yea + '-' + mon + '-' + 22;
                break;
            default: break;
        }
        if (d.getDate() == new Date(secnd).getDate()) {
            return "2nd Saturday";
        }
        else if (d.getDate() == new Date(forth).getDate()) {
            return "4th Saturday";
        }
        else {
            return "NotFound";
        }
    }
</script>

