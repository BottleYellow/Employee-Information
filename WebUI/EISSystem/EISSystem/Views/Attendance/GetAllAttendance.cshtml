@model IEnumerable<EIS.Entities.Employee.Person>
@{
    int absentdays = 0;
    int totaldays = 0;
    int totalHours = 0;
}

<style type="text/css">
    td{
        width:200px;
        text-align:center
    }
    th{
        font-size:medium;
        text-align:center
    }
</style>
@*<div><h4><b>Attendance Report</b></h4></div>*@

<div class="table-responsive">
    <table id="example" class="table table-bordered table-striped table-hover js-basic-example dataTable ">
        <thead>
            <tr>
                <th>Name</th>
                <th>Present Days</th>
                <th>Absent Days</th>
                <th>Total Days</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
            <tr>
                <td>@person.FirstName @person.LastName</td>
                <td>@person.Attendance.Count</td>
                @{
                    if (ViewBag.val == "year")
                    {
                        totaldays = 365;
                        //totaldays = DateTime.(person.Attendance.Where(x => x.PersonId == person.Id).FirstOrDefault().DateIn.Year);
                        absentdays = totaldays - person.Attendance.Count;
                    }
                    else if (ViewBag.val == "month")
                    {
                        totaldays = 30;
                        absentdays = totaldays - person.Attendance.Count;
                    }
                    else if (ViewBag.val == "week")
                    {
                        totaldays = 7;
                        absentdays = totaldays - person.Attendance.Count;


                    }
                }
                <td>@absentdays</td>
                <td>@totaldays</td>
            </tr>
            }
        </tbody>
    </table>
</div>



