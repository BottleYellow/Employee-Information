<body>
    <div class="ajax-loader">
        <img src="~/gif/Spinner.gif" />
    </div>
    <div class="container-fluid">
        <div class="block-header">
            <HeaderWithButton header-name="Attendance Report(Employee wise)"></HeaderWithButton>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="min-height:100px">
                    <div class="body">
                        <div>
                            <div class="row col-md-12">
                                <div class="col-md-3">
                                    <label>Select Location</label>
                                    <select id="locations" asp-items="@(new SelectList(@ViewBag.Locations,"Id","LocationName"))" class="form-control show-tick">
                                        <option value="0">All</option>
                                    </select>
                                </div>
                                <div class="col-md-9">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>Select Employee</label>
                                            <select class="form-control" id="selectEmployee">
                                                <option>-- Select --</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label>Select Type Of Reports</label>
                                            <select class="form-control" id="select">
                                                <option value="month" id="month">Month</option>
                                                <option value="year" id="year">Year</option>
                                                @*<option value="week" id="week">Week</option>*@
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <div id="inputyeardiv" hidden="hidden">
                                                <label>Select Year</label><br />
                                                <input class="form-control" type="text" id="inputyear" autocomplete="off" placeholder="select year" />
                                            </div>
                                            <div id="inputmonthdiv">
                                                <label>Select Month</label><br />
                                                <input class="form-control" type="text" id="inputmonth" autocomplete="off" placeholder="select month" />
                                            </div>
                                            <div id="inputweekdiv" hidden="hidden">
                                                <label>Select Week</label><br />
                                                <input class="form-control" type="text" id="inputweek" autocomplete="off" placeholder="select week" />
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <br />
                                            <input type="button" id="generateReport" value="Generate" style="font-weight:bold; font-size:16px; width:200px; height:40px; background-color:#3399ff; color:white;" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div>

                            <div class="container-fluid" id="attendanceReport" style="display:none;">
                                <div>
                                    <h4><span id="report">Attendance Report</span></h4>
                                </div>
                                <div class="row">

                                    <div class="col-md-3 col-sm-2">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Average TimeIn</div>
                                            <div id="averageTimeIn" class="panel-body"></div>
                                        </div>
                                    </div>

                                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Average TimeOut</div>
                                            <div id="averageTimeOut" class="panel-body"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-2">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Average Hrs</div>
                                            <div id="averageHours" class="panel-body"><span></span></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Additional Working Hours</div>
                                            <div id="addtionalWorkingHours" class="panel-body"></div>
                                        </div>
                                    </div>


                                </div>
                                <div class="row">

                                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Present Days</div>
                                            <div id="presentDays" class="panel-body"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">On Leave Days</div>
                                            <div id="absentDays" class="panel-body"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Total Working Days</div>
                                            <div id="totalWorkingDays" class="panel-body"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Total Number Of Days</div>
                                            <div id="totalNoOfDays" class="panel-body"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="tblExample" style="display:none;">
                                <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Time In</th>
                                            <th>Time Out</th>
                                            <th>Total Hours</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
