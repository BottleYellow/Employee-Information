        function generateReport(value, type, id) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("AttendanceSummaryById", "Attendance")?date=' + value + '&type=' + type + '&id=' + id,
                //data: { "date": value, "type": type, "id": id },
                success: function (data) {
                    document.getElementById("averageHours").innerHTML = data.AverageTime;
                    document.getElementById("averageTimeIn").innerHTML = data.TimeIn;
                    document.getElementById("averageTimeOut").innerHTML = data.TimeOut;
                    document.getElementById("presentDays").innerHTML = data.PresentDays;
                    document.getElementById("absentDays").innerHTML = data.AbsentDays;
                    document.getElementById("totalWorkingDays").innerHTML = data.TotalWorkingDays;
                    document.getElementById("totalNoOfDays").innerHTML = data.TotalDays;
                    document.getElementById("addtionalWorkingHours").innerHTML = data.AdditionalWorkingHours;
                },
                error: function (error) {
                    bootbox.alert('<h4>Error</h4>');
                }
            });

            $.ajax({
                "url": '@Url.Action("AttendanceSummary", "Attendance")?date=' + value + '&type=' + type + '&id=' + id,
                "type": "POST",
                "datatype": "json",
                success: function (data) {
                    var array = [];
                    for (var i = 0; i < data.length; i++) {
                        array.push([data[i].Date, data[i].Status, data[i].TimeIn, data[i].TimeOut, data[i].TotalHours])
                    }
                    $('#example').DataTable().destroy();
                    $('#example').DataTable({
                        data: array
                    });
                },

            });
        }
  

   
    function calculate(date) {
        var d = new Date(date);
        var mon = d.toLocaleString('en-us', { month: 'long' });
        var yea = d.getFullYear();
        var dat = 1;
        myDays = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
        myDate = new Date(eval('"' + dat + ',' + mon + ',' + yea + '"'))
        var first = myDays[myDate.getDay()];
        //alert(first);
        var secnd;
        var forth;
        switch (first) {
            case "Sunday":
                secnd = yea + '-' + mon + '-' + 14;
                forth = yea + '-' + mon + '-' + 28;
                break;
            case "Monday":
                secnd = yea + '-' + mon + '-' + 13;
                forth = yea + '-' + mon + '-' + 27;
                break;
            case "Tuesday":
                secnd = yea + '-' + mon + '-' + 12;
                forth = yea + '-' + mon + '-' + 26;
                break;
            case "Wednesday":
                secnd = yea + '-' + mon + '-' + 11;
                forth = yea + '-' + mon + '-' + 25;
                break;
            case "Thursday":
                secnd = yea + '-' + mon + '-' + 10;
                forth = yea + '-' + mon + '-' + 24;
                break;
            case "Friday":
                secnd = yea + '-' + mon + '-' + 9;
                forth = yea + '-' + mon + '-' + 23;
                break;
            case "Saturday":
                secnd = yea + '-' + mon + '-' + 8;
                forth = yea + '-' + mon + '-' + 22;
                break;
            default: break;
        }
        if (d.getDate() == new Date(secnd).getDate()) {
            return "2nd Saturday";
        }
        else if (d.getDate() == new Date(forth).getDate()) {
            return "4th Saturday";
        }
        else {
            return "NotFound";
        }
    }
</script>


