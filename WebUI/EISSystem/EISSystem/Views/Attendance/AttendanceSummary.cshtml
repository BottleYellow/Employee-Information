                $('#baner').hide();
                $('#kondhwa').hide();
            }
            else if (location == 1) {
                $('#all').hide();
                $('#baner').hide();
                $('#kondhwa').show();
            }
            else if (location == 2) {
                $('#all').hide();
                $('#baner').show();
                $('#kondhwa').hide();
            }
