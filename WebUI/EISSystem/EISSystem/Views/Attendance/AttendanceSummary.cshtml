<script type="text/javascript">

    $(document).ready(function () {
        var loc = $('#locations').val();
        $.ajax({
            type: 'GET',
            url: '@MyHttpContext.APIBaseURL/api/Employee/GetLocations/' + loc,
            success: function (data) {
                $('#selectEmployee').empty().append('<option selected="selected" value="0">Please select</option>');
                $.each(data, function (data, value) {
                    $('#selectEmployee').append($("<option></option>").val(this.id).html(this.fullName));
                });
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(jqXHR.status);
            }
            //error: function () {
            //    bootbox.alert('<h4>Error</h4>');
            //}

            });

        var id =@cookies.PersonId;
        $('select[id="selectEmployee"]').find('option[value=' + id + ']').attr("selected", true);
        var totalDays = 0;
        var currentDate = new Date();
        var m = ((currentDate.getMonth() + 1) >= 10) ? (currentDate.getMonth() + 1) : '0' + (currentDate.getMonth() + 1);
        var y = new Date().getFullYear();
        $('#inputmonth').datetimepicker({
            format: "MM/YYYY"
        });
        $('#inputmonth').val(m + '/' + y);
        //generateReport(m + '/' + y, 'month', id);
        $("#generateReport").prop("disabled", true);

        $('#selectEmployee').on('change', function () { 
            if ($('#selectEmployee').val() == 0) {
                $("#generateReport").prop("disabled", true);
            }
            else {
                $("#generateReport").removeAttr('disabled');
            };
            
        });

        $('#locations').on('change', function () {
                $("#generateReport").prop("disabled", true);
            
            var loc = $('#locations').val();
            $.ajax({
                type: 'GET',
                url: '@MyHttpContext.APIBaseURL/api/Employee/GetLocations/' + loc,
                success: function (data) {
                    $('#selectEmployee').empty().append('<option selected="selected" value="0">Please select</option>');
                    $.each(data, function (data, value) {
                        $('#selectEmployee').append($("<option></option>").val(this.id).html(this.fullName));
                    });
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.status);
                }
                //error: function () {
                //    bootbox.alert('<h4>Error</h4>');
                //}

            });
        });

        $('#select').on('change', function () {
            var v = $('#select').val();
            if (v == 'year') {
                $('#inputyear').val(y);
                $('#inputyeardiv').show();
                $('#inputmonthdiv').hide();
                $('#inputweekdiv').hide();
                $('#inputyear').datetimepicker({
                    format: "YYYY"
                });
            }
            else if (v == 'month') {
                $('#inputmonthdiv').show();
                $('#inputyeardiv').hide();
                $('#inputweekdiv').hide();
                $('#inputmonth').datetimepicker({
                    format: "MM/YYYY"
                });
            }
            else if (v == 'week') {
                var fd = getSunday(new Date());
                var ld = new Date();
                ld.setDate(fd.getDate() + 6);
                var firstDate = moment(fd, "MMM/DD/YYYY").day(0).format("MMM/DD/YYYY");
                var lastDate = moment(ld, "MMM/DD/YYYY").day(6).format("MMM/DD/YYYY");
                var weekstring = firstDate + '-' + lastDate;
                $("#inputweek").val(weekstring);
                $('#inputmonthdiv').hide();
                $('#inputyeardiv').hide();
                $('#inputweekdiv').show();
                $("#inputweek").datetimepicker({
                    format: "MMM/DD/YYYY"
                });
            }
        });
        function getSunday(d) {
            d = new Date(d);
            var day = d.getDay(),
                diff = d.getDate() - day /*+ (day == 0 ? -6 : 1)*/; // adjust when day is sunday
            return new Date(d.setDate(diff));
        }
        $('#inputweek').on('dp.change', function (e) {
            var value = $("#inputweek").val();
            var firstDate = moment(value, "MMM/DD/YYYY").day(0).format("MMM/DD/YYYY");
            var lastDate = moment(value, "MMM/DD/YYYY").day(6).format("MMM/DD/YYYY");
            $("#inputweek").val(firstDate + " - " + lastDate);
        });
        $('#generateReport').on('click', function () {
            $('#attendanceReport').show();
            $('#tblExample').show();
            var id = $('#selectEmployee').val();
            var v = $('#select').val();
            if (v == 'year') {
                var value = $("#inputyear").val();
                $("#inputyear").val(value);
                generateReport(value, 'year', id);
            }

            else if (v == 'month') {
                var value = $("#inputmonth").val();
                $("#inputmonth").val(value);
                var monthYear = value.split('/');
                var y = monthYear[1];
                var m = monthYear[0];
                generateReport(value, 'month', id);
            }
            else if (v == 'week') {
                var value = $("#inputweek").val();
                var firstDate = moment(value, "MMM/DD/YYYY").day(0).format("MMM/DD/YYYY");
                var lastDate = moment(value, "MMM/DD/YYYY").day(6).format("MMM/DD/YYYY");
                $("#inputweek").val(firstDate + " - " + lastDate);
                generateReport(firstDate + " - " + lastDate, 'week', id);
                //totalDays = 7;
            }
        });
    });

        function generateReport(value, type, id) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("AttendanceSummaryById", "Attendance")?date=' + value + '&type=' + type + '&id=' + id,
                //data: { "date": value, "type": type, "id": id },
                beforeSend: function () {
                    $('.ajax-loader').css("visibility", "visible");
                },
                success: function (data) {
                    document.getElementById("averageHours").innerHTML = data.AverageHours;
                    document.getElementById("averageTimeIn").innerHTML = data.AverageTimeIn;
                    document.getElementById("averageTimeOut").innerHTML = data.AverageTimeOut;
                    document.getElementById("presentDays").innerHTML = data.PresentDays;
                    document.getElementById("absentDays").innerHTML = data.LeaveDays;
                    document.getElementById("totalWorkingDays").innerHTML = data.TotalWorkingDays;
                    document.getElementById("totalNoOfDays").innerHTML = data.TotalDays;
                    document.getElementById("addtionalWorkingHours").innerHTML = data.AdditionalWorkingHours;
                },
                error: function (error) {
                    bootbox.alert('<h4>Error</h4>');
                },
                complete: function () {
                    $('.ajax-loader').css("visibility", "hidden");
                }
            });

            $.ajax({
                "url": '@Url.Action("AttendanceSummary", "Attendance")?date=' + value + '&type=' + type + '&id=' + id,
                "type": "POST",
                "datatype": "json",
                success: function (data) {
                    var array = [];
                    for (var i = 0; i < data.length; i++) {
                        var date = moment(data[i].Date).format("DD MMM YYYY");
                        var Status = data[i].Status;
                        if (Status == "Present") {
                            Status = '<span style="font-size:14px; font-weight:normal;" class="label label-success">' + Status + '</span>';
                        } else {
                            Status = '<span style="font-size:14px; font-weight:normal;" class="label label-warning">' + Status + '</span>';
                        }   

                        array.push([date, Status, data[i].TimeIn, data[i].TimeOut, data[i].TotalHours])
                    }
                    $('#example').DataTable().destroy();

                    $('#example').DataTable({
                        "aoColumns": [
                            { "sType": "date" },  //  "sType": "date" TO SPECIFY SORTING IS APPLICABLE ON DATE
                            null,
                            null,
                            null,
                            null
                        ],
                        data: array
                    });
                },

            });
        } 
 
</script>


