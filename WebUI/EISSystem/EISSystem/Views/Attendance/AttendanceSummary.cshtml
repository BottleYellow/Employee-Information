@model IEnumerable<EIS.Entities.Employee.Person>
@using EIS.WebApp.Services;
@{
    RedisAgent Cache = new RedisAgent();
 }
<style type="text/css">
    td {
        width: 200px;
        text-align: center
    }

    th {
        font-size: medium;
        text-align: center
    }

    div .panel-primary {
        text-align: center
    }

    .dataTables_wrapper .myexport .dt-buttons {
        float: right;
    }

    .bootstrap-datetimepicker-widget tr:hover {
        background-color: #808080;
    }

    #generateReport {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    #select, #selectEmployee {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    #inputyear, #inputmonth, #inputweek {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }
</style>
<head>
    <title>Employee wise Reports</title>
    <link href="https://cdn.datatables.net/rowreorder/1.2.5/css/rowReorder.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="~/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-datetimepicker1.css" rel="stylesheet" />
    @*for pdf*@
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.dataTables.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="block-header">
            <HeaderWithButton header-name="Attendance Report(Employee wise)"></HeaderWithButton>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="min-height:100px">
                    <div class="body">
                        <div>
                            <div class="row col-md-12">
                                <div class="col-md-9">
                                    <div class="row">
                                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                            <label>Select Employee</label>
                                            <select class="form-control" id="selectEmployee" asp-items="@(new SelectList(@ViewBag.Persons,"Id","FirstName"))" style="width:200px;">
                                                <option>-- Select --</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                            <label>Select Type Of Reports</label>
                                            <select class="form-control" id="select" style="width:200px;">
                                                <option value="month" id="month">Month</option>
                                                <option value="year" id="year">Year</option>
                                                <option value="week" id="week">Week</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                            <div id="inputyeardiv" hidden="hidden">
                                                <label>Select Year</label><br />
                                                <input class="form-control" type="text" id="inputyear" style="width:200px;" placeholder="select year" />
                                            </div>
                                            <div id="inputmonthdiv">
                                                <label>Select Month</label><br />
                                                <input class="form-control" type="text" id="inputmonth" style="width:200px;" placeholder="select month" />
                                            </div>
                                            <div id="inputweekdiv" hidden="hidden">
                                                <label>Select Week</label><br />
                                                <input class="form-control" type="text" id="inputweek" style="width:200px;" placeholder="select week" />
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                            <br />
                                            <input type="button" id="generateReport" value="Generate" style="font-weight:bold; font-size:16px; width:200px; height:40px; background-color:#3399ff; color:white;"/>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-3"></div>
                            </div>
                        </div>
                        <div>
                           
                            <div class="container-fluid" id="attendanceReport" style="display:none;">
                                <div>
                                    <h4><span id="report">Attendance Report</span></h4>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 col-sm-2">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Average Hrs</div>
                                            <div id="averageHours" class="panel-body"><span></span></div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-sm-2">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Average TimeIn</div>
                                            <div id="averageTimeIn" class="panel-body"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Average TimeOut</div>
                                            <div id="averageTimeOut" class="panel-body"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Present Days</div>
                                            <div id="presentDays" class="panel-body"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Absent Days</div>
                                            <div id="absentDays" class="panel-body"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-4 col-xs-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">Total Working Days</div>
                                            <div id="totalDays" class="panel-body"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="tblExample" style="display:none;">
                                <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Time In</th>
                                            <th>Time Out</th>
                                            <th>Total Hours</th>

                                        </tr>
                                    </thead>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

