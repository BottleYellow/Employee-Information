<script type="text/javascript">

    $(document).ready(function () {
        var id =@Cache.GetStringValue("PersonId");
        $('select[id="selectEmployee"]').find('option[value=' + id + ']').attr("selected", true);
        var totalDays = 0;
        var currentDate = new Date();
        var m = ((currentDate.getMonth() + 1) >= 10) ? (currentDate.getMonth() + 1) : '0' + (currentDate.getMonth() + 1);
        var y = new Date().getFullYear();
        $('#inputmonth').datetimepicker({
            format: "MM/YYYY"
        });
        $('#inputmonth').val(m + '/' + y);
        //generateReport(m + '/' + y, 'month', id);
        $("#generateReport").prop("disabled", true);

        $('#selectEmployee').on('change', function () {
            $("#generateReport").removeAttr('disabled');
        });
        $('#select').on('change', function () {
            var v = $('#select').val();
            if (v == 'year') {
                $('#inputyear').val(y);
                $('#inputyeardiv').show();
                $('#inputmonthdiv').hide();
                $('#inputweekdiv').hide();
                $('#inputyear').datetimepicker({
                    format: "YYYY"
                });
            }
            else if (v == 'month') {
                $('#inputmonthdiv').show();
                $('#inputyeardiv').hide();
                $('#inputweekdiv').hide();
                $('#inputmonth').datetimepicker({
                    format: "MM/YYYY"
                });
            }
            else if (v == 'week') {
                $("#inputweek").val("30/12/2018-05/01/2019");
                $('#inputmonthdiv').hide();
                $('#inputyeardiv').hide();
                $('#inputweekdiv').show();
                $("#inputweek").datetimepicker({
                    format: 'DD/MM/YYYY'
                });
            }
        });
        $('#inputweek').on('dp.change', function (e) {
            var value = $("#inputweek").val();
            var firstDate = moment(value, "DD/MM/YYYY").day(0).format("DD/MM/YYYY");
            var lastDate = moment(value, "DD/MM/YYYY").day(6).format("DD/MM/YYYY");
            $("#inputweek").val(firstDate + " - " + lastDate);
        });
        $('#generateReport').on('click', function () {
            $('#attendanceReport').show();
            $('#tblExample').show();
            var id = $('#selectEmployee').val();
            var v = $('#select').val();
            if (v == 'year') {
                var value = $("#inputyear").val();
                $("#inputyear").val(value);
                if (value % 4 == 0) {
                    totalDays = 366;
                }
                else {
                    totalDays = 365;
                }
                generateReport(value, 'year', id);
            }

            else if (v == 'month') {
                var value = $("#inputmonth").val();
                $("#inputmonth").val(value);
                var monthYear = value.split('/');
                var y = monthYear[1];
                var m = monthYear[0];
                totalDays = new Date(y, m, 0).getDate()
                generateReport(value, 'month', id);
            }
            else if (v == 'week') {
                var value = $("#inputweek").val();
                var firstDate = moment(value, "DD/MM/YYYY").day(0).format("DD/MM/YYYY");
                var lastDate = moment(value, "DD/MM/YYYY").day(6).format("DD/MM/YYYY");
                $("#inputweek").val(firstDate + " - " + lastDate);
                generateReport(firstDate + " - " + lastDate, 'week', id);
                totalDays = 7;
            }
        });

        function generateReport(value, type, id) {
            $.ajax({
                type: 'PUT',
                url: "/Attendance/AttendanceSummary",
                data: { "date": value, "type": type, "id": id },
                success: function (data) {
                    document.getElementById("averageHours").innerHTML = data.AverageTime;
                    document.getElementById("averageTimeIn").innerHTML = data.TimeIn;
                    document.getElementById("averageTimeOut").innerHTML = data.TimeOut;
                    document.getElementById("presentDays").innerHTML = data.PresentDays;
                    document.getElementById("absentDays").innerHTML = data.AbsentDays;
                    document.getElementById("totalDays").innerHTML = data.TotalDays;
                },
                error: function (error) {
                    bootbox.alert('<h4>Error</h4>');
                }
            });
      $.fn.dataTable.ext.errMode = 'none';
            $('#example').on('error.dt', function () {
                    bootbox.alert('<h4>Unable to load data from Server. Please try after sometime</h4>');
            }).DataTable();
            var dTable = $('#example').DataTable({
                destroy: true,
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                buttons: [
                    {
                        extend: 'pdfHtml5',
                        title: 'Employee Report',
                        text: 'Export',
                        titleAttr: 'Export to Pdf',
                        orientation: 'landscape',
                        pageSize: 'LEGAL'
                    }
                ],
                'columnDefs': [
                    {
                        'searchable': false,
                        'targets': [0, 1, 2]
                    }
                ],

                "aoColumnDefs": [
                    { "aTargets": [0], "bSortable": true },
                    { "aTargets": ['_all'], "bSortable": false }
                ],
                sDom: '<"myexport"B>irtlp',
                lengthMenu: [
                    [10, 25, -1],
                    ['10', '25', 'All']
                ],
                ajax: {
                    "url": "/Attendance/AttendanceSummary",
                    "type": "POST",
                    "datatype": "json",
                    "data": { "date": value, "type": type, "id": id },
                },
                "columns": [
                    {
                        "data": "DateIn", "name": "DateIn", "autoWidth": true, render: function (data, type, row) {
                            data = moment(data).format('DD MMM YYYY');
                            return data;
                        }
                    },
                    {
                        data: "IsActive", "autoWidth": true, render: function (data, type, row) {
                            if (new Date(row.DateIn).getDay() == 0 && row.TimeIn==row.TimeOut) {
                                return '<span style="font-size:12px;" class="label label-warning">Weekly Holiday</span>';
                            }
                            else if (new Date(row.DateIn).getDay() == 6 && calculate(row.DateIn) != "NotFound")
                            { 
                                return '<span class="label label-warning">' + calculate(row.DateIn)+'</span>';
                            }
                            else if (data == true) {
                                return '<span style="font-size:15px" class="label label-success">Present</span>';
                            } else {
                                var dateIn = moment(row.DateIn).format('L');
                                var date = moment(new Date()).format('L');
                                return '<span style="font-size:15px" class="label label-danger">Absent</span>';
                            }
                        }
                    },
                    {
                        "data": "TimeIn", "autoWidth": true, render: function (data, type, row) {
                            if (row.TimeIn == row.TimeOut) { return "-"; }
                            data = moment(data, "HH:mm:ss").format("hh:mm A");
                            return data;
                        }
                    },
                    {
                        "data": "TimeOut", "autoWidth": true, render: function (data, type, row) {
                            if (row.TimeIn == row.TimeOut) { return "-"; }
                            data = moment(data, "HH:mm:ss").format("hh:mm A");
                            return data;
                        }
                    },
                    {
                        "data": "TotalHours", "autoWidth": true, render: function (data, type, row) {
                            if (row.TimeIn == row.TimeOut) { return "-"; }
                            data = moment(data, "HH:mm:ss").format("HH:mm");
                            return data;
                        }
                    }      
                ],
                "initComplete": function () {
                    var $searchInput = $('div.dataTables_filter input');
                    $searchInput.unbind();
                    $searchInput.bind('keyup', function (e) {
                        if (this.value.length >= 3 || this.value.length == 0) {
                            dTable.search(this.value).draw();
                        }
                    });
                }
            });
        }
    });
    function calculate(date) {
        var d = new Date(date);
        var mon = d.toLocaleString('en-us', { month: 'long' });
        var yea = d.getFullYear();
        var dat = 1;
        myDays = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
        myDate = new Date(eval('"' + dat + ',' + mon + ',' + yea + '"'))
        var first = myDays[myDate.getDay()];
        //alert(first);
        var secnd;
        var forth;
        switch (first) {
            case "Sunday":
                secnd = yea + '-' + mon + '-' + 14;
                forth = yea + '-' + mon + '-' + 28;
                break;
            case "Monday":
                secnd = yea + '-' + mon + '-' + 13;
                forth = yea + '-' + mon + '-' + 27;
                break;
            case "Tuesday":
                secnd = yea + '-' + mon + '-' + 12;
                forth = yea + '-' + mon + '-' + 26;
                break;
            case "Wednesday":
                secnd = yea + '-' + mon + '-' + 11;
                forth = yea + '-' + mon + '-' + 25;
                break;
            case "Thursday":
                secnd = yea + '-' + mon + '-' + 10;
                forth = yea + '-' + mon + '-' + 24;
                break;
            case "Friday":
                secnd = yea + '-' + mon + '-' + 9;
                forth = yea + '-' + mon + '-' + 23;
                break;
            case "Saturday":
                secnd = yea + '-' + mon + '-' + 8;
                forth = yea + '-' + mon + '-' + 22;
                break;
            default: break;
        }
        if (d.getDate() == new Date(secnd).getDate()) {
            return "2nd Saturday";
        }
        else if (d.getDate() == new Date(forth).getDate()) {
            return "4th Saturday";
        }
        else { 
            return "NotFound";
        }
    }
</script>


