                            else if (item.location.locationName.startsWith("K")) {
                                k = k + 1;
                                $('#thk').html('Holidays : ' + k);
                                $('#twoffk').text('Weekly Off : ' + twok);
                            }

                        });
                        $('#allthb').html('Holidays : ' + b);
                        $('#alltwoffb').text('Weekly Off : ' + twob);
                        $('#allthk').html('Holidays : ' + k);
                        $('#alltwoffk').text('Weekly Off : ' + twok);
                        //$.each(data, function (i, item) {
                        //    $('#tholiday').text(item.length);
                        //})
                        //generateReport(value, 'year', location);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(jqXHR.status);
                    }
                });

                if (value % 4 == 0) {
                    totalDays = 366;
                }
                else {
                    totalDays = 365;
                }
                generateReport(value, 'year', id);
            }

            else if (v == 'month') {
                var twob = 6;
                var twok = 4;
                var value = $("#inputmonth").val();
                $("#inputmonth").val(value);
                var monthYear = value.split('/');
                var y = monthYear[1];
                var m = monthYear[0];
                totalDays = new Date(y, m, 0).getDate()
                var location = $('#locations').val();
                $.ajax({
                    type: "GET",
                    url: "@MyHttpContext.APIBaseURL/api/Holiday/" + m + "/" + y + "/" + location,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        var k = 0, b = 0;

                        $.each(data, function (i, item) {
                            if (item.location.locationName.startsWith("B")) {
                                b = b + 1;
                                $('#thb').html('Holidays : ' + b);
                                $('#twoffb').text('Weekly Off : ' + twob);
                            }
                            else if (item.location.locationName.startsWith("K")) {
                                k = k + 1;
                                $('#thk').html('Holidays : ' + k);
                                $('#twoffk').text('Weekly Off : ' + twok);
                            }
                        });
