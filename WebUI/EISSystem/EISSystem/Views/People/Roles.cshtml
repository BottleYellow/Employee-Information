@model IEnumerable<EIS.Entities.Employee.Role>
@using EIS.WebApp.Services
@{
    string rootPath = MyHttpContext.AppBaseUrl;
    if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.options = {
                    "debug": false,
                    "positionClass": "toast-top-right",
                    "onclick": null,
                    "fadeIn": 300,
                    "fadeOut": 1000,
                    "timeOut": 5000,
                    "extendedTimeOut": 1000
                }
                toastr.success("@ViewBag.Message");
            });
        </script>
        ViewBag.Message = null;
    }
}

<html>
<head>
    <title>Manage Roles</title>
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/css/customStyle.css" rel="stylesheet" />
    <style>
        .container-fluid {
            padding-left: 0px;
            padding-right: 0px;
        }
    </style>
</head>
<body>

    @*BootStrap Model*@
    <div class="container-fluid">
        <div class="block-header">
            <HeaderWithButton header-name="Roles" btn-href="location.href='@rootPath/People/AddRole'" btn-text="Add New" icon-name="add"></HeaderWithButton>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">

                            <table id="example" class="table table-striped table-bordered " style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Designation Name</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown">
                                                        <i class="material-icons" aria-haspopup="true" aria-expanded="true">build</i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a asp-action="EditRole" asp-route-id="@item.Id">Edit</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            paging:false
        });
    });
</script>
<script src="~/plugins/jquery-datatable/jquery.dataTables.js"></script>
<script src="~/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
<script src="~/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>
<script src="~/Ems/js/dataTables.responsive.min.js"></script>


