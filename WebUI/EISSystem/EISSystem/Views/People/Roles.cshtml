@model IEnumerable<EIS.Entities.Employee.Role>
@{
    if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                /*toastr.options.timeOut = 5000;*/ // 5s
                toastr.options = {
                    "debug": false,
                    "positionClass": "toast-top-right",
                    "onclick": null,
                    "fadeIn": 300,
                    "fadeOut": 1000,
                    "timeOut": 5000,
                    "extendedTimeOut": 1000
                }
                toastr.success("@ViewBag.Message");
            });
        </script>
        ViewBag.Message = null;
    }
}



@*<link href="../../plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet">*@



<html>
<head>
    <title>Manage Roles</title>
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/rowReorder.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />
</head>
<body>

    @*BootStrap Model*@
    <div class="container-fluid">
        <div class="block-header">
            <HeaderWithButton header-name="Roles" btn-href="location.href='/People/AddRole'" btn-text="Add New" icon-name="add"></HeaderWithButton>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div>
                            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            Id
                                        </th>
                                        <th>
                                            Designation Name
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>


                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown">
                                            <i class="material-icons" aria-haspopup="true" aria-expanded="true">build</i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a asp-action="EditRole" asp-route-id="@item.Id">Edit</a></li>

                                            
                                        </ul>
                                    </div>
                                </td>
                            </tr>
}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            rowReorder: {
                selector: 'td:nth-child(2)'
            },
            responsive: true
        });
    });
</script>
<script src="../../plugins/jquery-datatable/jquery.dataTables.js"></script>
<script src="../../plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
<script src="../../plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>
<script src="~/Ems/js/dataTables.rowReorder.min.js"></script>
<script src="~/Ems/js/dataTables.responsive.min.js"></script>
