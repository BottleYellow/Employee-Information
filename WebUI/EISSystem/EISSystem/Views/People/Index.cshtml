@using EIS.WebApp.Services
@model IEnumerable<EIS.Entities.Employee.Person>


<head>
    <link href="~/Ems/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Ems/css/buttons.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootbox.js"></script>
    <style>
        li:hover {
            cursor: pointer;
        }

        .dataTables_wrapper .myexport .dt-buttons {
            float: right;
        }

        .ajax-loader {
            visibility: hidden;
            position: absolute;
            z-index: +100 !important;
            width: 80%;
            height: 80%;
        }

            .ajax-loader img {
                position: relative;
                top: 45%;
                left: 45%;
            }
        table.dataTable td {
            margin-left: 0;
            margin-right: auto;
            padding: 3px 10px;
            width: 1px;
            white-space: nowrap;
        }
        * {
            font-family: Arial;
            font-style: normal
        }
      
    </style>
</head>

@{
    string rootPath = MyHttpContext.AppBaseUrl;
    string APIURL = MyHttpContext.APIBaseURL;
    if (ViewBag.Message != null)
    {
        <script>
            bootbox.alert({
                message: "@ViewBag.Message"
            });
        </script>
        ViewBag.Message = null;
    }
}
<div class="ajax-loader">
    <img src="~/gif/Spinner.gif" />
</div>
<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-md-12">
                <HeaderWithButton header-name="Employee List" btn-href="location.href='@rootPath/People/Create'" btn-text="Create" icon-name="person_add"></HeaderWithButton>
            </div>
        </div>
    </div>

    <div class="row clearfix">
        <div class="row">
            <div class="col-md-9" style="height:50px">
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <select id="locations" asp-items="@(new SelectList(@ViewBag.Locations,"Id","LocationName"))" class="form-control show-tick">
                        <option value="0">All</option>
                    </select>
                </div>
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <select class="form-control show-tick" id="select">
                        <option id="active" value="active">Active</option>
                        <option id="inActive" value="inActive">InActive</option>
                    </select>
                </div>

            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">

                        <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Location</th>
                                    <th>Employee Code</th>
                                    <th>Name</th>
                                    <th>Image</th>
                                    <th>Gender</th>
                                    <th>Birth Date</th>
                                    <th>Mobile Number</th>
                                    <th>Email Address</th>
                                    <th>Joining Date</th>
                                    <th>Created By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
  
            </div>
        </div>
    </div>
</div>

<script>
    var result = null;
     $(document).ready(function () {
        if ('@TempData["success"]' != '') {
            bootbox.alert({
                message: '@TempData["success"]'
            });
         }
         result = getCreatedBy();
        var b = true;
        generateReport(b,0);
    });
    $('#example').on('click', 'a.inactive', function (e) {
        e.preventDefault();
        var id = $(this).attr("id");
        var message = "Do you want to delete this record ?";
        bootbox.confirm(message, function (result) {
            if (result == true) {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("DeleteConfirmed", "People")?id=' + id,
                    success: function () {
                        bootbox.alert("Record deleted successfully!", function () {
                            location.href = '@Url.Action("Index", "People")';
                        });
                    },
                    error: function (xhr, status, error) {
                        if (xhr.status == 401) {
                            bootbox.alert("Access denied..Unable to Delete the Record");
                        } else {
                            bootbox.alert("Unable to Delete the Record");
                        }
                    }
                });
            }
        });
    });
    $('#example').on('click', 'a.active', function (e) {
        e.preventDefault();
        var id = $(this).attr("id");
        var message = "Do you want to activate Employee record ?"
        bootbox.confirm(message, function (result) {
            if (result == true) {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("ActivateEmployee", "People")?EmployeeCode=' + id,
                    data: null,
                    success: function () {
                        bootbox.alert("Record activated successfully!", function () {
                            location.href = '@Url.Action("Index", "People")';
                        });
                    },
                    error: function () {
                        bootbox.alert("Unable to Activate Data");
                    }
                });
            }
        });
    });
    $('#locations').on('change', function () {
        var c = $('#locations').val();
        var v = $('#select').val();
        if (v == "active") {
            b = true;
        }
        else if (v == "inActive") {
            b = false;
        }
        generateReport(b, c);
    });
    $('#select').on('change', function () {
        var c = $('#locations').val();
        var v = $('#select').val();
        var b;
        if (v == "active") {
            b = true;
            generateReport(b,c);
        }
        else if (v == "inActive") {
            b = false;
            generateReport(b,c);
        }
    });
    function generateReport(b,c) {
        $.ajax({
            "url": '@Url.Action("Index", "People")?type=' + b + '&LocationId=' + c,
            "type": "POST",
            "datatype": "json",
            beforeSend: function () {
                $('.ajax-loader').css("visibility", "visible");
            },
            success: function (data) {
                var array = [];
                var action;             
                var activeStatus;
                for (var i = 0; i < data.length; i++) {
                    var image = data[i].Image;
                    activeStatus = data[i].IsActive;
                    var dob = moment(data[i].DateOfBirth).format("DD MMM YYYY");
                    var joinDate = moment(data[i].JoinDate).format("DD MMM YYYY");
                    var path = '@MyHttpContext.AppBaseUrl/EmployeeData/1' + data[i].EmployeeCode + '/Image/' + image;
                    var defaultPath = '@MyHttpContext.AppBaseUrl/EmployeeData/DefaultImage/Default.png';
                    image = '<img src="' + path + '" onerror="if (this.src!=\'' + defaultPath + '\') this.src=\'' + defaultPath +'\';" style="height:40px; width:40px">';
              
                    if (activeStatus == true) {                       
                        action = '<div class="dropdown"> <button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu pull-right"><li><a href="@Url.Action("Profile","People")?PersonId=' + data[i].EmployeeCode + '">Profile</a></li><li><a class="inactive" id=' + data[i].EmployeeCode + '>Delete</a></li></ul></div>';
                    } else {
                        action = '<div class="dropdown"> <button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons">build</i></button><ul class="dropdown-menu pull-right"><li><a class="active" id=' + data[i].EmployeeCode + '>Activate</a></li></ul></div>';
                    }

                    array.push([data[i].LocationName, data[i].EmployeeCode, data[i].FullName, image, data[i].Gender, dob, data[i].MobileNumber, data[i].EmailAddress, joinDate, data[i].CreatedBy, action]);
                }

                $('#example').DataTable().destroy();
                $('#example').DataTable({
                    scrollX: true,
                    sDom: '<"myexport"B>ifrtlp',
                    order:[1,'asc'],
                    buttons: [
                        {
                            extend: 'pdfHtml5',
                            title: 'EMPLOYEE REPORT',
                            text: 'Export',
                            titleAttr: 'Export to Pdf',
                            exportOptions: {
                                columns: [0, 1, 2, 4, 5, 6, 7, 8]
                            }
                        }
                    ],
                    data: array
                });
            },
            complete: function () {
                $('.ajax-loader').css("visibility", "hidden");
            }
        });          
    }
    function getCreatedBy() {
        var result = null;
        $.ajax({
            type: "GET",
            async: false,
                    url: '@APIURL/api/Employee/CreatedBy',
                    data: null,
            success: function (data) {
                        result = data;
                    }
        });
        return result;
    }

    function getCreatedname(result,pid) {
        $.each(result, function (i, item){
            if (result[i].key == pid) {
               value= result[i].value;
            }
        })
        return value;
    }
</script>
<script src="~/Ems/js/jquery.dataTables.min.js"></script>
<script src="~/Ems/js/dataTables.buttons.min.js"></script>
<script src="~/Ems/js/buttons.flash.min.js"></script>
<script src="~/Ems/js/jszip.min.js"></script>
<script src="~/Ems/js/pdfmake.min.js"></script>
<script src="~/Ems/js/vfs_fonts.js"></script>
<script src="~/Ems/js/buttons.html5.min.js"></script>
<script src="~/Ems/js/buttons.print.min.js"></script>
<script src="~/Ems/js/dataTables.responsive.min.js"></script>
<script src="~/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>