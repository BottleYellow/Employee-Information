@model IEnumerable<EIS.Entities.Employee.Person>
@using EIS.Entities.Enums;

<head>
    <style>
        .dataTables_wrapper .myexport .dt-buttons {
            float: right
        }
    </style>
    <link href="https://cdn.datatables.net/rowreorder/1.2.5/css/rowReorder.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.dataTables.min.css" rel="stylesheet" />
    @*<link href="../../plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet">*@
    @*for toast*@
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
</head>
@{
    if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                /*toastr.options.timeOut = 5000;*/ // 5s
                toastr.options = {
                    "debug": false,
                    "positionClass": "toast-top-right",
                    "onclick": null,
                    "fadeIn": 300,
                    "fadeOut": 1000,
                    "timeOut": 5000,
                    "extendedTimeOut": 1000
                }
                toastr.success("@ViewBag.Message");
            });
        </script>
        ViewBag.Message = null;
    }
}
<div class="container-fluid">
    <div class="block-header">
        <h1>Admin Dashboard</h1>
    </div>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">

                    <p>
                        <a class="btn btn-primary waves-effect" style="display:none;" asp-controller="Role" asp-action="Create"><span><i style="font-size:16px;" class="glyphicon glyphicon-plus" ></i><text style="font-size:16px;">Create</text></span></a>
                    </p>

                    <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>IdCard</th>
                                <th>FirstName</th>
                                <th>Image</th>
                                <th> Gender</th>
                                <th>DateOfBirth</th>
                                <th>MobileNumber</th>
                                <th>EmailAddress</th>
                                <th>AadharCard</th>
                                <th>PanCard</th>
                                <th>JoinDate</th>
                                <th>LeavingDate</th>
                                <th>Salary</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


<script>
    var setting = null;
    $(document).ready(function () {
        var dTable = $('#example').DataTable({
            sDom: 'Bifrtlp' ,
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)'Bifrtlp'     sDom: '<"myexport"B>ifrtlp'
            buttons: [
                {
                    text: 'Create',
                    action: function (e, dt, node, config) {
                        dt.ajax.reload();
                    }
                },
                {
                    extend: 'pdfHtml5',
                    title: 'Employee Report',
                    text: 'Export',
                    titleAttr: 'Export to Pdf',
                    orientation: 'landscape',
                    pageSize: 'LEGAL'
                }
             
            ],
            lengthMenu: [
                [5, 10, 25, -1],
                ['5', '10', '25', 'All']
            ],
            ajax: {
                "url": "/People/LoadData",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs": [
                {
                    "render": function (data, type, row) {
                        return data + " " + row.MiddleName + " " + row.LastName;
                    },
                    "targets": 1
                },
            ],         
            "columns": [
                { "data": "IdCard", "name": "IdCard", "autoWidth": true },
                {
                    "data": "FirstName", "name": "FirstName", "autoWidth": true
                },

                {
                    "data": "Image", "name": "Image", "autoWidth": true, "render": function (data) {
                        return '<img src="data:image/png;base64,' + data + '" style="height:30px; weight:30px">';
                    }
                },
                { "data": "Gender", "name": "Gender", "autoWidth": true },
                {
                    "data": "DateOfBirth", "name": "DateOfBirth", "autoWidth": true, "render": function (data) {
                        data = moment(data).format('DD MMM YYYY');
                        return data;
                    }

                    },
                { "data": "MobileNumber", "name": "MobileNumber", "autoWidth": true },
                { "data": "EmailAddress", "name": "EmailAddress", "autoWidth": true },
                { "data": "AadharCard", "name": "AadharCard", "autoWidth": true },
                { "data": "PanCard", "name": "PanCard", "autoWidth": true },
                { "data": "JoinDate", "name": "JoinDate", "autoWidth": true },
                { "data": "LeavingDate", "name": "LeavingDate", "autoWidth": true },
                { "data": "Salary", "name": "Salary", "autoWidth": true },
                {
                    data: null, "autoWidth": true, render: function (data, type, row) {
                        return '<div class="dropdown"> <button class="btn btn-primary dropdown-toggle waves-effect" type="button" data-toggle="dropdown"><i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">build</i></button><ul class="dropdown-menu pull-right"><li><a href="/People/Edit?id=' + row.Id + '">Edit</a></li><li><a href="/People/Delete?id=' + row.Id + '">Delete</a></li></ul></div>';
                    }
                }
            ],
            "initComplete": function () {
                var $searchInput = $('div.dataTables_filter input');
                $searchInput.unbind();
                $searchInput.bind('keyup', function (e) {
                    if (this.value.length >= 3 || this.value.length == 0) {
                        dTable.search(this.value).draw();
                    }
                });
            }
        });
    });
</script>


