@using EIS.Entities.Enums;
@model EIS.Entities.Employee.Person

@{

    //ViewData["Title"] = "Create";
    //Layout = "_AdminLayout";

}
<header>
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    <style type="text/css">
        .form-group.required .control-label:after {
            color: #d00;
            content: "*";
            position: relative;
            /*margin-left: 8px;*/
            /*top: 7px;*/
        }
    </style>
</header>
<div class="container-fluid">
    <div>
        <h3><b>Create Employee</b></h3>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="container">
                            <div class="row">
                                <div style="height:50px"></div>
                                <div class="col-md-9" style="height:80px">
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="FirstName">First Name : </label>
                                            <div class="form-line">
                                                <input asp-for="FirstName" class="form-control" />
                                            </div>
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="MiddleName">Middle Name : </label>
                                            <div class="form-line">
                                                <input asp-for="MiddleName" class="form-control" />

                                            </div>
                                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="LastName">Last Name : </label>
                                            <div class="form-line">
                                                <input asp-for="LastName" class="form-control" />

                                            </div>
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9" style="height:80px">
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="MobileNumber">Mobile Number : </label>
                                            <div class="form-line">
                                                <input asp-for="MobileNumber" class="form-control" />
                                            </div>
                                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="EmailAddress">Email Address : </label>
                                            <div class="form-line">
                                                <input asp-for="EmailAddress" type="email" class="form-control" />

                                            </div>
                                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9" style="height:80px">
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="Image">Choose Image : </label>
                                            <div class="form-line">
                                                <input formenctype="multipart/form-data" type="file" accept="image/*" class="form-control" name="file" id="imageFile" onchange="return ValidateFileUpload()" />

                                            </div>
                                            <span  class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="DateOfBirth">Date Of Birth : </label>
                                            <div class="form-line">
                                                <input asp-for="DateOfBirth" class="form-control" />

                                            </div>
                                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="Gender">Gender : </label>
                                            <select asp-for="Gender" asp-items="@new SelectList(Enum.GetValues(typeof(Gender)))" class="form-control show-tick">
                                                <option value="">-- Select Gender --</option>
                                            </select>
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9" style="height:80px">
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="RoleId">Designation : </label>
                                            <select id="did" asp-for="RoleId" asp-items="@(new SelectList(@ViewBag.Designations,"Id","Name"))" class="form-control show-tick" onchange="myFunction();">
                                                <option>-- Select Designation --</option>
                                            </select>
                                            <span asp-validation-for="RoleId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="ReportingPersonId">Reporting Person : </label>
                                            <div class="form-line">
                                                <select asp-for="ReportingPersonId" asp-items="@(new SelectList(@ViewBag.Persons,"Id","FirstName"))" class="form-control show-tick">
                                                    <option>-- Select --</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9" style="height:80px">
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="JoinDate">Joining Date : </label>
                                            <div class="form-line">
                                                <input asp-for="JoinDate" class="form-control" />

                                            </div>
                                            <span asp-validation-for="JoinDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="Salary">Salary : </label>
                                            <div class="form-line">
                                                <input asp-for="Salary" class="form-control" />

                                            </div>
                                            <span asp-validation-for="Salary" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9" style="height:80px">
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="PanCard">Pan Card No. : </label>
                                            <div class="form-line">
                                                <input asp-for="PanCard" class="form-control" />

                                            </div>
                                            <span asp-validation-for="PanCard" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group required">
                                            <label class="control-label" asp-for="AadharCard">Aadhar No. : </label>
                                            <div class="form-line">
                                                <input asp-for="AadharCard" class="form-control" />

                                            </div>
                                            <span asp-validation-for="AadharCard" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9" style="height:80px">
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="Description">Description : </label>
                                            <div class="form-line">
                                                <textarea asp-for="Description" rows="2" class="form-control no-resize" placeholder="About You..."></textarea>
                                            </div>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">

                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9" style="height:80px">
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <button type="submit" asp-action="Index" class="btn btn-primary">Back</button>
                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/plugins/bootstrap-select/js/bootstrap-select.js"></script>
<SCRIPT type="text/javascript">


    function ValidateFileUpload() {
        var fuData = document.getElementById('imageFile');
        var FileUploadPath = fuData.value;
        var status = false;
        if (FileUploadPath == '')
        {
            alert("Please upload an image");

        }
        else
        {
            var fileLength = fuData.files[0].size;

            var Extension = FileUploadPath.substring(
                FileUploadPath.lastIndexOf('.') + 1).toLowerCase();

            //The file uploaded is an image
            if (Extension == "gif" || Extension == "png" || Extension == "bmp" || Extension == "jpeg" || Extension == "jpg")
            {
                if (fileLength < 100000)
                {
                    status = true;
                }                  
                else
                {
                        alert("File must be below 100 kb");
                }

            }
            else
            {
                alert("Photo only allows file types of GIF, PNG, JPG, JPEG and BMP. ");
            }
        }
        if (!status) {
   
        }
      
    }
</SCRIPT>

